{% extends 'base.html.twig' %}

{% block title %}Session #{{ session.id }} - Admin{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 animate-fade-in-up">
        <div class="flex items-center justify-between mb-4">
            <a href="{{ path('admin_quiz_index') }}" class="inline-flex items-center gap-2 text-primary-500 hover:text-primary-400 transition group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Back to list
            </a>
            <form action="{{ path('admin_quiz_delete', {id: session.id}) }}" method="POST" onsubmit="return confirm('Delete this session? ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ session.id) }}">
                <button type="submit" class="bg-red-100 dark:bg-red-900/20 text-red-600 dark:text-red-400 px-4 py-2 rounded-xl hover:bg-red-200 dark:hover:bg-red-900/40 transition text-sm font-medium">
                    <i class="fas fa-trash mr-2"></i> Delete
                </button>
            </form>
        </div>
        <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white flex items-center gap-3">
            <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl text-white">
                <i class="fas fa-clipboard-list"></i>
            </span>
            Session #{{ session.id }}
        </h1>
        <p class="text-gray-500 dark:text-gray-400 mt-1">{{ session.sessionLabel }}</p>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mb-8 animate-fade-in-up stagger-1">
        <div class="card-modern p-5">
            <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">Status</p>
            {% if session.status == 'completed' %}<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400"><i class="fas fa-check mr-2"></i> Completed</span>
            {% elseif session.status == 'in_progress' %}<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400"><i class="fas fa-spinner mr-2"></i> In progress</span>
            {% else %}<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-400"><i class="fas fa-ban mr-2"></i> Abandoned</span>{% endif %}
        </div>
        <div class="card-modern p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm">Score</p>
                    {% if session.isCompleted %}<p class="text-3xl font-extrabold {% if session.score >= 80 %}text-emerald-600{% elseif session.score >= 60 %}text-amber-600{% else %}text-red-600{% endif %}">{{ session.score|number_format(1) }}%</p>
                    {% else %}<p class="text-3xl font-extrabold text-gray-400">-</p>{% endif %}
                </div>
                <div class="w-12 h-12 flex items-center justify-center bg-violet-100 dark:bg-violet-900/30 rounded-xl"><i class="fas fa-percentage text-violet-500 text-xl"></i></div>
            </div>
        </div>
        <div class="card-modern p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm">Questions</p>
                    <p class="text-2xl font-extrabold text-gray-900 dark:text-white"><span class="text-emerald-600">{{ session.correctAnswers }}</span><span class="text-gray-400">/</span>{{ session.totalQuestions }}</p>
                </div>
                <div class="w-12 h-12 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 rounded-xl"><i class="fas fa-question-circle text-blue-500 text-xl"></i></div>
            </div>
        </div>
        <div class="card-modern p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm">Duration</p>
                    <p class="text-2xl font-extrabold text-gray-900 dark:text-white">{% if session.timeSpentSeconds %}{{ session.formattedTimeSpent }}{% else %}-{% endif %}</p>
                </div>
                <div class="w-12 h-12 flex items-center justify-center bg-primary-100 dark:bg-primary-900/30 rounded-xl"><i class="fas fa-clock text-primary-500 text-xl"></i></div>
            </div>
        </div>
    </div>

    <!-- Details Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
        <!-- Info Card -->
        <div class="card-modern overflow-hidden animate-fade-in-up stagger-2">
            <div class="bg-gradient-to-r from-primary-500 to-violet-500 px-6 py-4">
                <h2 class="text-lg font-bold text-white"><i class="fas fa-info-circle mr-2"></i> Information</h2>
            </div>
            <div class="p-6">
                <dl class="space-y-4">
                    <div><dt class="text-sm font-semibold text-gray-500 dark:text-gray-400">Mode</dt><dd class="mt-1 text-gray-900 dark:text-white capitalize">{{ session.mode }}</dd></div>
                    <div><dt class="text-sm font-semibold text-gray-500 dark:text-gray-400">Category</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ session.category ? session.category.name : 'Multiple / Random' }}</dd></div>
                    <div><dt class="text-sm font-semibold text-gray-500 dark:text-gray-400">Subcategory</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ session.subcategory ? session.subcategory.name : '-' }}</dd></div>
                    <div><dt class="text-sm font-semibold text-gray-500 dark:text-gray-400">Started on</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ session.startedAt|date('d/m/Y H:i:s') }}</dd></div>
                    {% if session.completedAt %}<div><dt class="text-sm font-semibold text-gray-500 dark:text-gray-400">Completed on</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ session.completedAt|date('d/m/Y H:i:s') }}</dd></div>{% endif %}
                    <div><dt class="text-sm font-semibold text-gray-500 dark:text-gray-400">Current question</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ session.currentQuestionIndex + 1 }}</dd></div>
                </dl>
            </div>
        </div>

        <!-- Answers -->
        <div class="lg:col-span-2 card-modern overflow-hidden animate-fade-in-up stagger-3">
            <div class="bg-gradient-to-r from-emerald-500 to-teal-500 px-6 py-4 flex items-center justify-between">
                <h2 class="text-lg font-bold text-white"><i class="fas fa-list-check mr-2"></i> Answers ({{ session.userAnswers|length }})</h2>
            </div>
            <div class="overflow-x-auto max-h-96">
                <table class="w-full">
                    <thead class="bg-gray-50 dark:bg-gray-800/50 sticky top-0">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">#</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Question</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Result</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Time</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700/50">
                        {% for userAnswer in session.userAnswers %}
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/30 transition {{ userAnswer.isCorrect ? '' : 'bg-red-50/50 dark:bg-red-900/5' }}">
                            <td class="px-4 py-3 text-sm text-gray-500">{{ loop.index }}</td>
                            <td class="px-4 py-3 text-sm text-gray-900 dark:text-white max-w-md">
                                <div class="truncate" title="{{ userAnswer.question.text|striptags }}">{{ userAnswer.question.text|striptags|slice(0, 100) }}{% if userAnswer.question.text|length > 100 %}...{% endif %}</div>
                                <div class="text-xs text-gray-400 mt-0.5">{{ userAnswer.question.subcategory.name }}</div>
                            </td>
                            <td class="px-4 py-3">
                                {% if userAnswer.isCorrect %}<span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-bold bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400"><i class="fas fa-check mr-1"></i> Correct</span>
                                {% else %}<span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-bold bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400"><i class="fas fa-times mr-1"></i> Incorrect</span>{% endif %}
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-500">{{ userAnswer.answeredAt|date('H:i:s') }}</td>
                        </tr>
                        {% else %}
                        <tr><td colspan="4" class="px-4 py-8 text-center text-gray-500 dark:text-gray-400"><i class="fas fa-inbox text-gray-300 dark:text-gray-600 text-3xl mb-2"></i><p>No answers</p></td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Progress -->
    {% if session.totalQuestions > 0 %}
    <div class="card-modern p-6 animate-fade-in-up stagger-4">
        <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <i class="fas fa-tasks text-primary-500"></i> Progress
        </h2>
        <div class="mb-4">
            <div class="flex justify-between text-sm text-gray-600 dark:text-gray-400 mb-2">
                <span>Answered: {{ session.userAnswers|length }} / {{ session.totalQuestions }}</span>
                <span>{{ ((session.userAnswers|length / session.totalQuestions) * 100)|number_format(0) }}%</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-primary-500 to-violet-500 h-3 rounded-full transition-all" style="width: {{ (session.userAnswers|length / session.totalQuestions) * 100 }}%"></div>
            </div>
        </div>
        {% if session.isCompleted %}
        <div class="grid grid-cols-2 gap-4 mt-6">
            <div class="text-center p-5 bg-emerald-50 dark:bg-emerald-900/10 rounded-xl border border-emerald-100 dark:border-emerald-800">
                <p class="text-3xl font-extrabold text-emerald-600">{{ session.correctAnswers }}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">Correct</p>
            </div>
            <div class="text-center p-5 bg-red-50 dark:bg-red-900/10 rounded-xl border border-red-100 dark:border-red-800">
                <p class="text-3xl font-extrabold text-red-600">{{ session.incorrectAnswers }}</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">Incorrect</p>
            </div>
        </div>
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock %}
