{% extends 'base.html.twig' %}

{% block title %}Question #{{ question.id }} - Admin{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 animate-fade-in-up">
        <div class="flex items-center justify-between mb-4">
            <a href="{{ path('admin_question_index') }}" class="inline-flex items-center gap-2 text-primary-500 hover:text-primary-400 transition group">
                <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> Back to questions
            </a>
            <div class="flex gap-2">
                <a href="{{ path('admin_question_edit', {id: question.id}) }}" class="bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 px-4 py-2 rounded-xl hover:bg-blue-200 dark:hover:bg-blue-900/50 transition text-sm font-medium">
                    <i class="fas fa-edit mr-2"></i> Edit
                </a>
                <form action="{{ path('admin_question_duplicate', {id: question.id}) }}" method="POST" class="inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ question.id) }}">
                    <button type="submit" class="bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 px-4 py-2 rounded-xl hover:bg-emerald-200 dark:hover:bg-emerald-900/50 transition text-sm font-medium">
                        <i class="fas fa-copy mr-2"></i> Duplicate
                    </button>
                </form>
                <form action="{{ path('admin_question_delete', {id: question.id}) }}" method="POST" class="inline" onsubmit="return confirm('Delete this question? ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                    <button type="submit" class="bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 px-4 py-2 rounded-xl hover:bg-red-200 dark:hover:bg-red-900/50 transition text-sm font-medium">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                </form>
            </div>
        </div>
        <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white flex items-center gap-3">
            <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl text-white">
                <i class="fas fa-question-circle"></i>
            </span>
            Question #{{ question.id }}
        </h1>
        <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400 mt-2">
            <span><i class="fas fa-folder mr-1"></i> {{ question.category.name }}</span>
            <span class="text-gray-300 dark:text-gray-600">|</span>
            <span><i class="fas fa-tag mr-1"></i> {{ question.subcategory.name }}</span>
            {% if question.isCertification %}
                <span class="text-gray-300 dark:text-gray-600">|</span>
                <span class="text-emerald-500"><i class="fas fa-certificate mr-1"></i> Certification</span>
            {% endif %}
        </div>
    </div>

    <!-- Question Card -->
    <div class="card-modern mb-6 overflow-hidden animate-fade-in-up stagger-1">
        <div class="p-6 border-b border-gray-100 dark:border-gray-700/50">
            <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-xl text-sm font-medium 
                        {% if question.type == 'single_choice' %}bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400
                        {% elseif question.type == 'multiple_choice' %}bg-violet-100 dark:bg-violet-900/30 text-violet-600 dark:text-violet-400
                        {% else %}bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400{% endif %}">
                        <i class="fas {{ question.typeEnum.icon }} mr-2"></i>{{ question.typeEnum.label }}
                    </span>
                    <div class="flex gap-0.5">{% for i in 1..5 %}<i class="fas fa-star {{ i <= question.difficulty ? 'text-amber-400' : 'text-gray-200 dark:text-gray-600' }}"></i>{% endfor %}</div>
                </div>
                <span class="text-xs text-gray-400 font-mono">ID: {{ question.identifier ?? 'N/A' }}</span>
            </div>
            <div class="question-text prose max-w-none dark:prose-invert">{{ question.text|raw }}</div>
        </div>

        <!-- Answers -->
        <div class="p-6">
            <h3 class="text-sm font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-4">
                Answers ({{ question.answers|length }})
            </h3>
            <div class="space-y-3">
                {% for answer in question.answers %}
                <div class="flex items-start gap-3 p-4 rounded-xl {{ answer.isCorrect ? 'bg-emerald-50 dark:bg-emerald-900/10 border border-emerald-200 dark:border-emerald-800' : 'bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700' }}">
                    <div class="flex-shrink-0 mt-0.5">
                        {% if answer.isCorrect %}<i class="fas fa-check-circle text-emerald-500 text-lg"></i>
                        {% else %}<i class="fas fa-circle text-gray-300 dark:text-gray-600 text-lg"></i>{% endif %}
                    </div>
                    <div class="flex-1 answer-text text-gray-800 dark:text-gray-200">{{ answer.text|raw }}</div>
                    {% if answer.isCorrect %}
                        <span class="bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400 px-2 py-0.5 rounded-lg text-xs font-bold flex-shrink-0">Correct</span>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% if question.explanation %}
    <div class="card-modern p-6 mb-6 animate-fade-in-up stagger-2">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
            <i class="fas fa-lightbulb text-amber-500"></i> Explanation
        </h3>
        <div class="text-gray-700 dark:text-gray-300 prose max-w-none dark:prose-invert">{{ question.explanation|raw }}</div>
    </div>
    {% endif %}

    {% if question.resourceUrl %}
    <div class="card-modern p-6 mb-6 animate-fade-in-up stagger-3">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
            <i class="fas fa-link text-primary-500"></i> Resources
        </h3>
        <div class="space-y-2">
            {% for url in question.resourceUrl|parse_urls %}
                <a href="{{ url }}" target="_blank" rel="noopener" class="flex items-center text-primary-500 hover:text-primary-400 hover:underline transition">
                    <i class="fas fa-external-link-alt mr-2"></i>{{ url|length > 80 ? url|slice(0, 80) ~ '...' : url }}
                </a>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <div class="card-modern p-6 animate-fade-in-up stagger-4">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <i class="fas fa-info-circle text-primary-500"></i> Metadata
        </h3>
        <dl class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div><dt class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Created on</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ question.createdAt ? question.createdAt|date('d/m/Y H:i') : 'N/A' }}</dd></div>
            <div><dt class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Updated on</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ question.updatedAt ? question.updatedAt|date('d/m/Y H:i') : 'Never' }}</dd></div>
            <div><dt class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Identifier</dt><dd class="mt-1 text-gray-900 dark:text-white font-mono text-sm">{{ question.identifier ?? 'Not generated' }}</dd></div>
            <div><dt class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Answers received</dt><dd class="mt-1 text-gray-900 dark:text-white">{{ question.userAnswers|length }}</dd></div>
        </dl>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('pre code').forEach((block) => { hljs.highlightElement(block); });
});
</script>
{% endblock %}
{% endblock %}
