{% extends 'base.html.twig' %}

{% block title %}Question #{{ question.id }} - Admin{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between mb-4">
            <a href="{{ path('admin_question_index') }}" class="text-indigo-600 hover:text-indigo-800">
                <i class="fas fa-arrow-left mr-2"></i> Back to Questions
            </a>
            <div class="flex gap-2">
                <a href="{{ path('admin_question_edit', {id: question.id}) }}" 
                   class="bg-blue-100 text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-200 transition">
                    <i class="fas fa-edit mr-2"></i> Edit
                </a>
                <form action="{{ path('admin_question_duplicate', {id: question.id}) }}" method="POST" class="inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ question.id) }}">
                    <button type="submit" class="bg-green-100 text-green-600 px-4 py-2 rounded-lg hover:bg-green-200 transition">
                        <i class="fas fa-copy mr-2"></i> Duplicate
                    </button>
                </form>
                <form action="{{ path('admin_question_delete', {id: question.id}) }}" method="POST" class="inline"
                      onsubmit="return confirm('Delete this question?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                    <button type="submit" class="bg-red-100 text-red-600 px-4 py-2 rounded-lg hover:bg-red-200 transition">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                </form>
            </div>
        </div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
            <i class="fas fa-question-circle text-indigo-600 mr-2"></i> Question #{{ question.id }}
        </h1>
        <div class="flex items-center gap-3 text-sm text-gray-500">
            <span><i class="fas fa-folder mr-1"></i> {{ question.category.name }}</span>
            <span class="text-gray-300">|</span>
            <span><i class="fas fa-tag mr-1"></i> {{ question.subcategory.name }}</span>
            {% if question.isCertification %}
                <span class="text-gray-300">|</span>
                <span class="text-green-600"><i class="fas fa-certificate mr-1"></i> Certification</span>
            {% endif %}
        </div>
    </div>

    <!-- Question Card -->
    <div class="bg-white rounded-xl shadow mb-6">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium 
                        {% if question.type == 'single_choice' %}bg-blue-100 text-blue-700
                        {% elseif question.type == 'multiple_choice' %}bg-purple-100 text-purple-700
                        {% else %}bg-gray-100 text-gray-700{% endif %}">
                        <i class="fas {{ question.typeEnum.icon }} mr-2"></i>
                        {{ question.typeEnum.label }}
                    </span>
                    <div class="flex gap-0.5">
                        {% for i in 1..5 %}
                            <i class="fas fa-star {{ i <= question.difficulty ? 'text-yellow-400' : 'text-gray-200' }}"></i>
                        {% endfor %}
                    </div>
                </div>
                <span class="text-xs text-gray-400 font-mono">ID: {{ question.identifier ?? 'N/A' }}</span>
            </div>

            <div class="question-text prose max-w-none">
                {{ question.text|raw }}
            </div>
        </div>

        <!-- Answers -->
        <div class="p-6">
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">
                Answers ({{ question.answers|length }})
            </h3>
            <div class="space-y-3">
                {% for answer in question.answers %}
                <div class="flex items-start gap-3 p-4 rounded-lg {{ answer.isCorrect ? 'bg-green-50 border border-green-200' : 'bg-gray-50' }}">
                    <div class="flex-shrink-0 mt-0.5">
                        {% if answer.isCorrect %}
                            <i class="fas fa-check-circle text-green-600 text-lg"></i>
                        {% else %}
                            <i class="fas fa-circle text-gray-300 text-lg"></i>
                        {% endif %}
                    </div>
                    <div class="flex-1 answer-text">
                        {{ answer.text|raw }}
                    </div>
                    {% if answer.isCorrect %}
                        <span class="bg-green-100 text-green-700 px-2 py-0.5 rounded text-xs font-medium flex-shrink-0">
                            Correct
                        </span>
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Explanation -->
    {% if question.explanation %}
    <div class="bg-white rounded-xl shadow mb-6 p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-3">
            <i class="fas fa-lightbulb text-yellow-500 mr-2"></i> Explanation
        </h3>
        <div class="text-gray-700 prose max-w-none">
            {{ question.explanation|raw }}
        </div>
    </div>
    {% endif %}

    <!-- Resources -->
    {% if question.resourceUrl %}
    <div class="bg-white rounded-xl shadow mb-6 p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-3">
            <i class="fas fa-link text-indigo-600 mr-2"></i> Resources
        </h3>
        <div class="space-y-2">
            {% for url in question.resourceUrl|parse_urls %}
                <a href="{{ url }}" target="_blank" rel="noopener" 
                   class="flex items-center text-indigo-600 hover:text-indigo-800 hover:underline">
                    <i class="fas fa-external-link-alt mr-2"></i>
                    {{ url|length > 80 ? url|slice(0, 80) ~ '...' : url }}
                </a>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Metadata -->
    <div class="bg-white rounded-xl shadow p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-4">
            <i class="fas fa-info-circle text-indigo-600 mr-2"></i> Metadata
        </h3>
        <dl class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase">Created</dt>
                <dd class="mt-1 text-gray-900">{{ question.createdAt ? question.createdAt|date('Y-m-d H:i') : 'N/A' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase">Updated</dt>
                <dd class="mt-1 text-gray-900">{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i') : 'Never' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase">Identifier</dt>
                <dd class="mt-1 text-gray-900 font-mono text-sm">{{ question.identifier ?? 'Not generated' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-medium text-gray-500 uppercase">Times Answered</dt>
                <dd class="mt-1 text-gray-900">{{ question.userAnswers|length }}</dd>
            </div>
        </dl>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Highlight code blocks
    document.querySelectorAll('pre code').forEach((block) => {
        hljs.highlightElement(block);
    });
});
</script>
{% endblock %}
{% endblock %}
