{% extends 'base.html.twig' %}

{% block title %}Categories Management - Admin{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fas fa-folder-tree text-indigo-600 mr-2"></i> Categories Management
            </h1>
            <p class="text-gray-500">Manage quiz categories and subcategories</p>
        </div>
        <div class="flex gap-3">
            <a href="{{ path('admin_question_index') }}" class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition">
                <i class="fas fa-question-circle mr-2"></i> Questions
            </a>
            <a href="{{ path('admin_category_new') }}" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">
                <i class="fas fa-plus mr-2"></i> New Category
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-white rounded-xl shadow p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-xs uppercase">Total Categories</p>
                    <p class="text-2xl font-bold text-gray-800">{{ categories|length }}</p>
                </div>
                <div class="bg-indigo-100 p-2 rounded-lg">
                    <i class="fas fa-folder text-indigo-600"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-xs uppercase">Total Subcategories</p>
                    {% set totalSubcategories = 0 %}
                    {% for category in categories %}
                        {% set totalSubcategories = totalSubcategories + category.subcategories|length %}
                    {% endfor %}
                    <p class="text-2xl font-bold text-blue-600">{{ totalSubcategories }}</p>
                </div>
                <div class="bg-blue-100 p-2 rounded-lg">
                    <i class="fas fa-tags text-blue-600"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-xs uppercase">Total Questions</p>
                    {% set totalQuestions = 0 %}
                    {% for id, count in questionCounts %}
                        {% set totalQuestions = totalQuestions + count %}
                    {% endfor %}
                    <p class="text-2xl font-bold text-green-600">{{ totalQuestions }}</p>
                </div>
                <div class="bg-green-100 p-2 rounded-lg">
                    <i class="fas fa-question-circle text-green-600"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories List -->
    <div class="space-y-6">
        {% for category in categories %}
        <div class="bg-white rounded-xl shadow overflow-hidden">
            <!-- Category Header -->
            <div class="bg-gradient-to-r {% if category.name == 'Symfony' %}from-gray-900 to-gray-700{% elseif category.name == 'PHP' %}from-indigo-600 to-purple-600{% else %}from-blue-600 to-indigo-600{% endif %} px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center text-white">
                        <i class="fas fa-{{ category.icon ?? 'folder' }} text-2xl mr-3"></i>
                        <div>
                            <h2 class="text-xl font-bold">{{ category.name }}</h2>
                            {% if category.description %}
                                <p class="text-white/70 text-sm">{{ category.description }}</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="bg-white/20 px-3 py-1 rounded-full text-sm text-white">
                            {{ questionCounts[category.id] ?? 0 }} questions
                        </span>
                        <div class="flex gap-2">
                            <a href="{{ path('admin_subcategory_new', {id: category.id}) }}" 
                               class="bg-white/20 text-white px-3 py-1.5 rounded-lg text-sm hover:bg-white/30 transition"
                               title="Add Subcategory">
                                <i class="fas fa-plus mr-1"></i> Subcategory
                            </a>
                            <a href="{{ path('admin_category_edit', {id: category.id}) }}" 
                               class="bg-white/20 text-white p-1.5 rounded-lg hover:bg-white/30 transition"
                               title="Edit Category">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="{{ path('admin_category_delete', {id: category.id}) }}" method="POST" class="inline"
                                  onsubmit="return confirm('Delete this category? This cannot be undone.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button type="submit" class="bg-white/20 text-white p-1.5 rounded-lg hover:bg-red-500 transition"
                                        title="Delete Category">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subcategories -->
            <div class="p-4">
                {% if category.subcategories|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                    {% for subcategory in category.subcategories %}
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition group">
                        <div class="flex items-center min-w-0">
                            <i class="fas fa-tag text-gray-400 mr-2 flex-shrink-0"></i>
                            <div class="min-w-0">
                                <span class="text-gray-700 font-medium truncate block">{{ subcategory.name }}</span>
                                {% if subcategory.description %}
                                    <span class="text-gray-400 text-xs truncate block">{{ subcategory.description }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="flex items-center gap-2 flex-shrink-0 ml-2">
                            <span class="text-gray-400 text-sm">
                                {{ subcategoryCounts[subcategory.id] ?? 0 }} Q
                            </span>
                            <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition">
                                <a href="{{ path('admin_subcategory_edit', {id: subcategory.id}) }}" 
                                   class="text-blue-600 hover:text-blue-800 p-1" title="Edit">
                                    <i class="fas fa-edit text-sm"></i>
                                </a>
                                <form action="{{ path('admin_subcategory_delete', {id: subcategory.id}) }}" method="POST" class="inline"
                                      onsubmit="return confirm('Delete this subcategory?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subcategory.id) }}">
                                    <button type="submit" class="text-red-600 hover:text-red-800 p-1" title="Delete">
                                        <i class="fas fa-trash text-sm"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-8 text-gray-400">
                    <i class="fas fa-inbox text-3xl mb-2"></i>
                    <p>No subcategories yet</p>
                    <a href="{{ path('admin_subcategory_new', {id: category.id}) }}" class="text-indigo-600 hover:underline text-sm">
                        <i class="fas fa-plus mr-1"></i> Add first subcategory
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
        {% else %}
        <div class="bg-white rounded-xl shadow p-12 text-center">
            <i class="fas fa-folder-open text-gray-300 text-5xl mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">No Categories Yet</h3>
            <p class="text-gray-500 mb-4">Create your first category to start organizing questions.</p>
            <a href="{{ path('admin_category_new') }}" class="inline-flex items-center bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
                <i class="fas fa-plus mr-2"></i> Create First Category
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
