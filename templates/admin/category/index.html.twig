{% extends 'base.html.twig' %}

{% block title %}Category Management - Admin{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 animate-fade-in-up">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white flex items-center gap-3">
                <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl text-white">
                    <i class="fas fa-folder-tree"></i>
                </span>
                Category Management
            </h1>
            <p class="text-gray-500 dark:text-gray-400 mt-1">Manage quiz categories and subcategories</p>
        </div>
        <div class="flex gap-3">
            <a href="{{ path('admin_question_index') }}" class="btn-ghost px-4 py-2 rounded-xl text-sm">
                <i class="fas fa-question-circle mr-2"></i> Questions
            </a>
            <a href="{{ path('admin_category_new') }}" class="btn-primary px-4 py-2 rounded-xl text-sm">
                <i class="fas fa-plus mr-2"></i> New category
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8 animate-fade-in-up stagger-1">
        <div class="card-modern p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Total categories</p>
                    <p class="text-2xl font-extrabold text-gray-900 dark:text-white mt-1">{{ categories|length }}</p>
                </div>
                <div class="w-11 h-11 flex items-center justify-center bg-primary-100 dark:bg-primary-900/30 rounded-xl">
                    <i class="fas fa-folder text-primary-500"></i>
                </div>
            </div>
        </div>

        <div class="card-modern p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Total subcategories</p>
                    {% set totalSubcategories = 0 %}
                    {% for category in categories %}
                        {% set totalSubcategories = totalSubcategories + category.subcategories|length %}
                    {% endfor %}
                    <p class="text-2xl font-extrabold text-blue-600 dark:text-blue-400 mt-1">{{ totalSubcategories }}</p>
                </div>
                <div class="w-11 h-11 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 rounded-xl">
                    <i class="fas fa-tags text-blue-500"></i>
                </div>
            </div>
        </div>

        <div class="card-modern p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider font-semibold">Total questions</p>
                    {% set totalQuestions = 0 %}
                    {% for id, count in questionCounts %}
                        {% set totalQuestions = totalQuestions + count %}
                    {% endfor %}
                    <p class="text-2xl font-extrabold text-emerald-600 dark:text-emerald-400 mt-1">{{ totalQuestions }}</p>
                </div>
                <div class="w-11 h-11 flex items-center justify-center bg-emerald-100 dark:bg-emerald-900/30 rounded-xl">
                    <i class="fas fa-question-circle text-emerald-500"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories List -->
    <div class="space-y-6">
        {% for category in categories %}
        <div class="card-modern overflow-hidden animate-fade-in-up stagger-{{ loop.index + 1 }}">
            <!-- Category Header -->
            <div class="bg-gradient-to-r from-primary-600 via-violet-600 to-purple-600 px-6 py-5">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3 text-white">
                        <div class="w-12 h-12 flex items-center justify-center bg-white/15 backdrop-blur-sm rounded-xl">
                            <i class="fas fa-{{ category.icon ?? 'folder' }} text-2xl"></i>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">{{ category.name }}</h2>
                            {% if category.description %}
                                <p class="text-white/70 text-sm">{{ category.description }}</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm text-white font-medium">
                            {{ questionCounts[category.id] ?? 0 }} questions
                        </span>
                        <div class="flex gap-2">
                            <a href="{{ path('admin_subcategory_new', {id: category.id}) }}" 
                               class="bg-white/20 backdrop-blur-sm text-white px-3 py-1.5 rounded-lg text-sm hover:bg-white/30 transition"
                               title="Add a subcategory">
                                <i class="fas fa-plus mr-1"></i> Subcategory
                            </a>
                            <a href="{{ path('admin_category_edit', {id: category.id}) }}" 
                               class="bg-white/20 backdrop-blur-sm text-white p-1.5 rounded-lg hover:bg-white/30 transition"
                               title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="{{ path('admin_category_delete', {id: category.id}) }}" method="POST" class="inline"
                                  onsubmit="return confirm('Delete this category? This action is irreversible.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button type="submit" class="bg-white/20 backdrop-blur-sm text-white p-1.5 rounded-lg hover:bg-red-500 transition"
                                        title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subcategories -->
            <div class="p-5">
                {% if category.subcategories|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                    {% for subcategory in category.subcategories %}
                    <div class="flex items-center justify-between p-3.5 bg-gray-50 dark:bg-gray-800/50 rounded-xl hover:bg-primary-50 dark:hover:bg-primary-900/10 transition group border border-transparent hover:border-primary-200 dark:hover:border-primary-800">
                        <div class="flex items-center min-w-0 gap-2.5">
                            <i class="fas fa-tag text-gray-400 group-hover:text-primary-500 transition flex-shrink-0"></i>
                            <div class="min-w-0">
                                <span class="text-gray-700 dark:text-gray-300 font-medium truncate block">{{ subcategory.name }}</span>
                                {% if subcategory.description %}
                                    <span class="text-gray-400 text-xs truncate block">{{ subcategory.description }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="flex items-center gap-2 flex-shrink-0 ml-2">
                            <span class="text-gray-400 text-sm font-medium">
                                {{ subcategoryCounts[subcategory.id] ?? 0 }} Q
                            </span>
                            <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition">
                                <a href="{{ path('admin_subcategory_edit', {id: subcategory.id}) }}" 
                                   class="text-blue-500 hover:text-blue-700 p-1 rounded hover:bg-blue-50 dark:hover:bg-blue-900/20 transition" title="Edit">
                                    <i class="fas fa-edit text-sm"></i>
                                </a>
                                <form action="{{ path('admin_subcategory_delete', {id: subcategory.id}) }}" method="POST" class="inline"
                                      onsubmit="return confirm('Delete this subcategory?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subcategory.id) }}">
                                    <button type="submit" class="text-red-500 hover:text-red-700 p-1 rounded hover:bg-red-50 dark:hover:bg-red-900/20 transition" title="Delete">
                                        <i class="fas fa-trash text-sm"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-8 text-gray-400 dark:text-gray-500">
                    <i class="fas fa-inbox text-3xl mb-2"></i>
                    <p>No subcategories</p>
                    <a href="{{ path('admin_subcategory_new', {id: category.id}) }}" class="text-primary-500 hover:underline text-sm mt-1 inline-block">
                        <i class="fas fa-plus mr-1"></i> Add the first subcategory
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
        {% else %}
        <div class="card-modern p-12 text-center">
            <i class="fas fa-folder-open text-gray-300 dark:text-gray-600 text-5xl mb-4"></i>
            <h3 class="text-xl font-bold text-gray-800 dark:text-gray-200 mb-2">No categories</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-4">Create your first category to start organizing questions.</p>
            <a href="{{ path('admin_category_new') }}" class="btn-primary px-5 py-2.5 rounded-xl inline-flex items-center">
                <i class="fas fa-plus mr-2"></i> Create the first category
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
