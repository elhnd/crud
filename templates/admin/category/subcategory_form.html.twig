{% extends 'base.html.twig' %}

{% block title %}{{ subcategory ? 'Edit Subcategory' : 'New Subcategory' }} - Admin{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
        <a href="{{ path('admin_category_index') }}" class="text-indigo-600 hover:text-indigo-800 mb-4 inline-block">
            <i class="fas fa-arrow-left mr-2"></i> Back to Categories
        </a>
        <h1 class="text-3xl font-bold text-gray-800">
            <i class="fas {{ subcategory ? 'fa-edit' : 'fa-plus-circle' }} text-indigo-600 mr-2"></i>
            {{ subcategory ? 'Edit Subcategory' : 'New Subcategory' }}
        </h1>
        <p class="text-gray-500 mt-2">
            {% if subcategory %}
                Editing subcategory in <strong>{{ category.name }}</strong>
            {% else %}
                Adding subcategory to <strong>{{ category.name }}</strong>
            {% endif %}
        </p>
    </div>

    <!-- Form -->
    <form method="POST" class="space-y-6">
        <input type="hidden" name="_token" value="{{ csrf_token('subcategory_form') }}">

        <div class="bg-white rounded-xl shadow p-6">
            <div class="space-y-4">
                <!-- Category (for editing) -->
                {% if subcategory and categories is defined %}
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Category <span class="text-red-500">*</span>
                    </label>
                    <select name="category_id" required
                        class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        {% for cat in categories %}
                            <option value="{{ cat.id }}" {{ cat.id == category.id ? 'selected' : '' }}>
                                {{ cat.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                <!-- Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Subcategory Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" name="name" required
                        value="{{ formData.name ?? subcategory.name ?? '' }}"
                        class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                        placeholder="e.g., Routing, Controllers, Dependency Injection">
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Description
                    </label>
                    <textarea name="description" rows="3"
                        class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                        placeholder="Brief description of this subcategory...">{{ formData.description ?? subcategory.description ?? '' }}</textarea>
                </div>
            </div>
        </div>

        <!-- Info about the category -->
        <div class="bg-blue-50 rounded-xl p-4 flex items-start gap-3">
            <i class="fas fa-info-circle text-blue-500 mt-0.5"></i>
            <div class="text-sm text-blue-700">
                <p class="font-medium">Subcategory Naming Tips</p>
                <ul class="mt-1 list-disc list-inside text-blue-600">
                    <li>Use clear, descriptive names</li>
                    <li>Keep names concise but meaningful</li>
                    <li>For Symfony topics, prefix with "Symfony:" (e.g., "Symfony:Routing")</li>
                    <li>For PHP topics, prefix with "PHP:" (e.g., "PHP:Arrays")</li>
                </ul>
            </div>
        </div>

        <!-- Submit -->
        <div class="flex items-center justify-between">
            <a href="{{ path('admin_category_index') }}" class="text-gray-600 hover:text-gray-800">
                <i class="fas fa-times mr-2"></i> Cancel
            </a>
            <button type="submit" class="bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition">
                <i class="fas fa-save mr-2"></i> {{ subcategory ? 'Update Subcategory' : 'Create Subcategory' }}
            </button>
        </div>
    </form>
</div>
{% endblock %}
