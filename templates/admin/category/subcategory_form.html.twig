{% extends 'base.html.twig' %}

{% block title %}{{ subcategory ? 'Edit subcategory' : 'New subcategory' }} - Admin{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 animate-fade-in-up">
        <a href="{{ path('admin_category_index') }}" class="inline-flex items-center gap-2 text-primary-500 hover:text-primary-400 mb-4 transition group">
            <i class="fas fa-arrow-left group-hover:-translate-x-1 transition-transform"></i> 
            <span>Back to categories</span>
        </a>
        <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white flex items-center gap-3">
            <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl text-white">
                <i class="fas {{ subcategory ? 'fa-edit' : 'fa-plus' }}"></i>
            </span>
            {{ subcategory ? 'Edit subcategory' : 'New subcategory' }}
        </h1>
        <p class="text-gray-500 dark:text-gray-400 mt-2">
            {% if subcategory %}
                Editing in <strong class="text-gray-700 dark:text-gray-300">{{ category.name }}</strong>
            {% else %}
                Adding to <strong class="text-gray-700 dark:text-gray-300">{{ category.name }}</strong>
            {% endif %}
        </p>
    </div>

    <!-- Form -->
    <form method="POST" class="space-y-6">
        <input type="hidden" name="_token" value="{{ csrf_token('subcategory_form') }}">

        <div class="card-modern p-6 animate-fade-in-up stagger-1">
            <div class="space-y-5">
                {% if subcategory and categories is defined %}
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Parent category <span class="text-red-500">*</span>
                    </label>
                    <select name="category_id" required
                        class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-3 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white">
                        {% for cat in categories %}
                            <option value="{{ cat.id }}" {{ cat.id == category.id ? 'selected' : '' }}>
                                {{ cat.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Subcategory name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" name="name" required
                        value="{{ formData.name ?? subcategory.name ?? '' }}"
                        class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-3 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white"
                        placeholder="ex: Routing, Controllers, Dependency Injection">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Description
                    </label>
                    <textarea name="description" rows="3"
                        class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-3 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white"
                        placeholder="Brief description of this subcategory...">{{ formData.description ?? subcategory.description ?? '' }}</textarea>
                </div>
            </div>
        </div>

        <!-- Info -->
        <div class="card-modern p-4 border-l-4 border-l-blue-500 animate-fade-in-up stagger-2">
            <div class="flex items-start gap-3">
                <i class="fas fa-lightbulb text-blue-500 mt-0.5"></i>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                    <p class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Naming tips</p>
                    <ul class="mt-1 list-disc list-inside space-y-0.5">
                        <li>Use clear and descriptive names</li>
                        <li>Keep it concise but meaningful</li>
                        <li>For Symfony, prefix with "Symfony:" (ex: "Symfony:Routing")</li>
                        <li>For PHP, prefix with "PHP:" (ex: "PHP:Arrays")</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Submit -->
        <div class="flex items-center justify-between animate-fade-in-up stagger-3">
            <a href="{{ path('admin_category_index') }}" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition">
                <i class="fas fa-times mr-2"></i> Cancel
            </a>
            <button type="submit" class="btn-primary px-6 py-3 rounded-xl font-semibold">
                <i class="fas fa-save mr-2"></i> {{ subcategory ? 'Update' : 'Create subcategory' }}
            </button>
        </div>
    </form>
</div>
{% endblock %}
