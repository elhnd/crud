{% extends 'base.html.twig' %}

{% block title %}Report #{{ report.id }} - Admin{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">
                <i class="fas fa-flag text-red-500 mr-2"></i> Report #{{ report.id }}
            </h1>
            <p class="text-gray-500 mt-1">Submitted {{ report.createdAt|date('F d, Y \\a\\t H:i') }}</p>
        </div>
        <div class="flex items-center space-x-3">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                bg-{{ report.statusColor }}-100 text-{{ report.statusColor }}-800">
                <i class="fas fa-circle text-xs mr-2"></i> {{ report.statusLabel }}
            </span>
            <a href="{{ path('admin_report_index') }}" class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition">
                <i class="fas fa-arrow-left mr-1"></i> Back to Reports
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Left Column: Report Details -->
        <div class="space-y-6">
            <!-- Report Info Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-red-500 to-orange-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white">
                        <i class="fas fa-exclamation-triangle mr-2"></i> Report Details
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-500 mb-1">Report Type</label>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                            <i class="fas fa-tag mr-1"></i> {{ report.typeLabel }}
                        </span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500 mb-1">User Message</label>
                        <div class="bg-gray-50 rounded-lg p-4 text-gray-800 border border-gray-200">
                            {{ report.message|nl2br }}
                        </div>
                    </div>
                    <div class="flex items-center space-x-6 text-sm text-gray-500">
                        <span><i class="fas fa-calendar mr-1"></i> Created: {{ report.createdAt|date('M d, Y H:i') }}</span>
                        {% if report.updatedAt %}
                            <span><i class="fas fa-edit mr-1"></i> Updated: {{ report.updatedAt|date('M d, Y H:i') }}</span>
                        {% endif %}
                        {% if report.resolvedAt %}
                            <span><i class="fas fa-check mr-1"></i> Resolved: {{ report.resolvedAt|date('M d, Y H:i') }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Admin Response Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-4">
                    <h2 class="text-lg font-bold text-white">
                        <i class="fas fa-comment-dots mr-2"></i> Admin Response
                    </h2>
                </div>
                <div class="p-6">
                    <form method="post" action="{{ path('admin_report_respond', {id: report.id}) }}">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Response Message</label>
                            <textarea name="admin_response" rows="4" 
                                class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm"
                                placeholder="Write your response to this report...">{{ report.adminResponse }}</textarea>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Update Status</label>
                            <select name="status" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                                {% for label, value in reportStatuses %}
                                    <option value="{{ value }}" {{ report.status == value ? 'selected' : '' }}>{{ label }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-indigo-700 transition w-full">
                            <i class="fas fa-paper-plane mr-1"></i> Save Response
                        </button>
                    </form>
                </div>
            </div>

            <!-- Delete Report -->
            <div class="bg-white rounded-xl shadow p-4">
                <form method="post" action="{{ path('admin_report_delete', {id: report.id}) }}" 
                      onsubmit="return confirm('Are you sure you want to delete this report?')">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-report-' ~ report.id) }}">
                    <button type="submit" class="text-red-600 hover:text-red-800 text-sm font-medium">
                        <i class="fas fa-trash mr-1"></i> Delete this report
                    </button>
                </form>
            </div>
        </div>

        <!-- Right Column: Question Details & Edit -->
        <div class="space-y-6">
            <!-- Question Preview Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-green-500 to-teal-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white">
                        <i class="fas fa-question-circle mr-2"></i> Reported Question
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-500 mb-1">Category</label>
                        <div class="flex items-center space-x-2">
                            <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm font-medium">
                                {{ question.category.name }}
                            </span>
                            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">
                                {{ question.subcategory.name }}
                            </span>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-500 mb-1">Question Text</label>
                        <div class="bg-gray-50 rounded-lg p-4 text-gray-800 border border-gray-200 question-text">
                            {{ question.text|format_code }}
                        </div>
                    </div>
                    {% if question.explanation %}
                    <div>
                        <label class="block text-sm font-medium text-gray-500 mb-1">Current Explanation</label>
                        <div class="bg-blue-50 rounded-lg p-4 text-blue-800 border border-blue-200 text-sm">
                            {{ question.explanation|format_code }}
                        </div>
                    </div>
                    {% endif %}
                    <div>
                        <label class="block text-sm font-medium text-gray-500 mb-1">Answers</label>
                        <div class="space-y-2">
                            {% for answer in question.answers %}
                            <div class="flex items-center p-3 rounded-lg border {{ answer.isCorrect ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200' }}">
                                <span class="mr-3">
                                    {% if answer.isCorrect %}
                                        <i class="fas fa-check-circle text-green-600"></i>
                                    {% else %}
                                        <i class="far fa-circle text-gray-400"></i>
                                    {% endif %}
                                </span>
                                <span class="text-gray-800 text-sm answer-text">{{ answer.text|format_code }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Question Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-amber-500 to-orange-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white">
                        <i class="fas fa-edit mr-2"></i> Fix Question
                    </h2>
                </div>
                <div class="p-6">
                    <form method="post" action="{{ path('admin_report_update_question', {id: report.id}) }}">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Question Text</label>
                            <textarea name="question_text" rows="4" 
                                class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm">{{ question.text }}</textarea>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Explanation</label>
                            <textarea name="explanation" rows="3" 
                                class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">{{ question.explanation }}</textarea>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-3">Answers</label>
                            <div class="space-y-3">
                                {% for answer in question.answers %}
                                <div class="flex items-start space-x-3 p-3 border rounded-lg {{ answer.isCorrect ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200' }}">
                                    <div class="flex-shrink-0 pt-2">
                                        <input type="checkbox" name="answer_correct[{{ answer.id }}]" value="1" {{ answer.isCorrect ? 'checked' : '' }}
                                            class="w-5 h-5 text-green-600 border-gray-300 rounded focus:ring-green-500">
                                    </div>
                                    <div class="flex-1">
                                        <textarea name="answer_texts[{{ answer.id }}]" rows="2" 
                                            class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm">{{ answer.text }}</textarea>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            <p class="text-xs text-gray-500 mt-2">
                                <i class="fas fa-info-circle mr-1"></i> Check the box to mark an answer as correct.
                            </p>
                        </div>
                        <button type="submit" class="bg-amber-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-amber-700 transition w-full">
                            <i class="fas fa-save mr-1"></i> Update Question
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
