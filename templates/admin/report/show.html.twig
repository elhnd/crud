{% extends 'base.html.twig' %}

{% block title %}Report #{{ report.id }} - Admin{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-8 gap-4 animate-fade-in-up">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white flex items-center gap-3">
                <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-red-500 to-orange-500 rounded-xl text-white">
                    <i class="fas fa-flag"></i>
                </span>
                Report #{{ report.id }}
            </h1>
            <p class="text-gray-500 dark:text-gray-400 mt-1">Submitted on {{ report.createdAt|date('m/d/Y H:i') }}</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-bold bg-{{ report.statusColor }}-100 dark:bg-{{ report.statusColor }}-900/30 text-{{ report.statusColor }}-700 dark:text-{{ report.statusColor }}-400">
                <i class="fas fa-circle text-[8px] mr-2"></i> {{ report.statusLabel }}
            </span>
            <a href="{{ path('admin_report_index') }}" class="btn-ghost px-4 py-2 rounded-xl text-sm">
                <i class="fas fa-arrow-left mr-1"></i> Back
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Left Column: Report Details -->
        <div class="space-y-6">
            <!-- Report Info Card -->
            <div class="card-modern overflow-hidden animate-fade-in-up stagger-1">
                <div class="bg-gradient-to-r from-red-500 to-orange-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white flex items-center">
                        <i class="fas fa-exclamation-triangle mr-2"></i> Report details
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Type</label>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-violet-100 dark:bg-violet-900/30 text-violet-700 dark:text-violet-400">
                            <i class="fas fa-tag mr-1"></i> {{ report.typeLabel }}
                        </span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Message</label>
                        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-xl p-4 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700">
                            {{ report.message|nl2br }}
                        </div>
                    </div>
                    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                        <span><i class="fas fa-calendar mr-1"></i> Created: {{ report.createdAt|date('d/m/Y H:i') }}</span>
                        {% if report.updatedAt %}
                            <span><i class="fas fa-edit mr-1"></i> Updated: {{ report.updatedAt|date('d/m/Y H:i') }}</span>
                        {% endif %}
                        {% if report.resolvedAt %}
                            <span class="text-emerald-600 dark:text-emerald-400"><i class="fas fa-check mr-1"></i> Resolved: {{ report.resolvedAt|date('d/m/Y H:i') }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Admin Response Card -->
            <div class="card-modern overflow-hidden animate-fade-in-up stagger-2">
                <div class="bg-gradient-to-r from-primary-500 to-violet-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white flex items-center">
                        <i class="fas fa-comment-dots mr-2"></i> Admin response
                    </h2>
                </div>
                <div class="p-6">
                    <form method="post" action="{{ path('admin_report_respond', {id: report.id}) }}">
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Response message</label>
                            <textarea name="admin_response" rows="4"
                                class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white"
                                placeholder="Write your response...">{{ report.adminResponse }}</textarea>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Update status</label>
                            <select name="status" class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent text-gray-900 dark:text-white">
                                {% for label, value in reportStatuses %}
                                    <option value="{{ value }}" {{ report.status == value ? 'selected' : '' }}>{{ label }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn-primary w-full py-2.5 rounded-xl text-sm">
                            <i class="fas fa-paper-plane mr-1"></i> Save response
                        </button>
                    </form>
                </div>
            </div>

            <!-- Delete Report -->
            <div class="card-modern p-4 animate-fade-in-up stagger-3">
                <form method="post" action="{{ path('admin_report_delete', {id: report.id}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this report? ?')">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-report-' ~ report.id) }}">
                    <button type="submit" class="text-red-500 hover:text-red-400 text-sm font-semibold transition">
                        <i class="fas fa-trash mr-1"></i> Delete this report
                    </button>
                </form>
            </div>
        </div>

        <!-- Right Column: Question Details & Edit -->
        <div class="space-y-6">
            <!-- Question Preview Card -->
            <div class="card-modern overflow-hidden animate-fade-in-up stagger-2">
                <div class="bg-gradient-to-r from-emerald-500 to-teal-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white flex items-center">
                        <i class="fas fa-question-circle mr-2"></i> Reported question
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Category</label>
                        <div class="flex items-center gap-2">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400">
                                {{ question.category.name }}
                            </span>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-violet-100 dark:bg-violet-900/30 text-violet-700 dark:text-violet-400">
                                {{ question.subcategory.name }}
                            </span>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Text</label>
                        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-xl p-4 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700 question-text">
                            {{ question.text|format_code }}
                        </div>
                    </div>
                    {% if question.explanation %}
                    <div>
                        <label class="block text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Current explanation</label>
                        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4 text-blue-800 dark:text-blue-300 border border-blue-200 dark:border-blue-800/50 text-sm">
                            {{ question.explanation|format_code }}
                        </div>
                    </div>
                    {% endif %}
                    <div>
                        <label class="block text-sm font-semibold text-gray-500 dark:text-gray-400 mb-2">Answers</label>
                        <div class="space-y-2">
                            {% for answer in question.answers %}
                            <div class="flex items-center p-3 rounded-xl border {{ answer.isCorrect ? 'bg-emerald-50 dark:bg-emerald-900/20 border-emerald-200 dark:border-emerald-800/50' : 'bg-gray-50 dark:bg-gray-800/30 border-gray-200 dark:border-gray-700' }}">
                                <span class="mr-3">
                                    {% if answer.isCorrect %}
                                        <i class="fas fa-check-circle text-emerald-500"></i>
                                    {% else %}
                                        <i class="far fa-circle text-gray-400 dark:text-gray-500"></i>
                                    {% endif %}
                                </span>
                                <span class="text-sm text-gray-800 dark:text-gray-200 answer-text">{{ answer.text|format_code }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Question Card -->
            <div class="card-modern overflow-hidden animate-fade-in-up stagger-3">
                <div class="bg-gradient-to-r from-amber-500 to-orange-500 px-6 py-4">
                    <h2 class="text-lg font-bold text-white flex items-center">
                        <i class="fas fa-edit mr-2"></i> Fix the question
                    </h2>
                </div>
                <div class="p-6">
                    <form method="post" action="{{ path('admin_report_update_question', {id: report.id}) }}">
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Question text</label>
                            <textarea name="question_text" rows="4"
                                class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-3 font-mono text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white">{{ question.text }}</textarea>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Explanation</label>
                            <textarea name="explanation" rows="3"
                                class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white">{{ question.explanation }}</textarea>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">Answers</label>
                            <div class="space-y-3">
                                {% for answer in question.answers %}
                                <div class="flex items-start gap-3 p-3 rounded-xl border {{ answer.isCorrect ? 'bg-emerald-50 dark:bg-emerald-900/10 border-emerald-200 dark:border-emerald-800/50' : 'bg-gray-50 dark:bg-gray-800/30 border-gray-200 dark:border-gray-700' }}">
                                    <div class="flex-shrink-0 pt-2">
                                        <input type="checkbox" name="answer_correct[{{ answer.id }}]" value="1" {{ answer.isCorrect ? 'checked' : '' }}
                                            class="w-5 h-5 text-emerald-500 border-gray-300 dark:border-gray-600 rounded focus:ring-emerald-500">
                                    </div>
                                    <div class="flex-1">
                                        <textarea name="answer_texts[{{ answer.id }}]" rows="2"
                                            class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-3 py-2 font-mono text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white">{{ answer.text }}</textarea>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                                <i class="fas fa-info-circle mr-1"></i> Check the box to mark an answer as correct.
                            </p>
                        </div>
                        <button type="submit" class="w-full py-2.5 rounded-xl text-sm font-bold text-white bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 transition shadow-lg shadow-amber-500/25">
                            <i class="fas fa-save mr-1"></i> Update the question
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
