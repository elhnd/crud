{% extends 'base.html.twig' %}

{% block title %}Report management - Admin{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-8 gap-4 animate-fade-in-up">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white flex items-center gap-3">
                <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-red-500 to-orange-500 rounded-xl text-white">
                    <i class="fas fa-flag"></i>
                </span>
                Reports
            </h1>
            <p class="text-gray-500 dark:text-gray-400 mt-1">Review and resolve reports on questions</p>
        </div>
        <a href="{{ path('admin_quiz_index') }}" class="btn-ghost px-4 py-2 rounded-xl text-sm">
            <i class="fas fa-arrow-left mr-1"></i> Back to admin
        </a>
    </div>

    <!-- Status Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6 animate-fade-in-up stagger-1">
        <a href="{{ path('admin_report_index') }}" class="card-modern p-4 hover:shadow-lg transition {{ currentStatus is null ? 'ring-2 ring-primary-500' : '' }}">
            <div class="text-2xl font-extrabold text-gray-900 dark:text-white">{{ reports|length }}</div>
            <div class="text-sm text-gray-500 dark:text-gray-400"><i class="fas fa-list mr-1"></i> All</div>
        </a>
        <a href="{{ path('admin_report_index', {status: 'pending'}) }}" class="card-modern p-4 hover:shadow-lg transition {{ currentStatus == 'pending' ? 'ring-2 ring-amber-500' : '' }}">
            <div class="text-2xl font-extrabold text-amber-600 dark:text-amber-400">{{ statusCounts.pending ?? 0 }}</div>
            <div class="text-sm text-gray-500 dark:text-gray-400"><i class="fas fa-clock mr-1"></i> Pending</div>
        </a>
        <a href="{{ path('admin_report_index', {status: 'reviewed'}) }}" class="card-modern p-4 hover:shadow-lg transition {{ currentStatus == 'reviewed' ? 'ring-2 ring-blue-500' : '' }}">
            <div class="text-2xl font-extrabold text-blue-600 dark:text-blue-400">{{ statusCounts.reviewed ?? 0 }}</div>
            <div class="text-sm text-gray-500 dark:text-gray-400"><i class="fas fa-eye mr-1"></i> Reviewed</div>
        </a>
        <a href="{{ path('admin_report_index', {status: 'resolved'}) }}" class="card-modern p-4 hover:shadow-lg transition {{ currentStatus == 'resolved' ? 'ring-2 ring-emerald-500' : '' }}">
            <div class="text-2xl font-extrabold text-emerald-600 dark:text-emerald-400">{{ statusCounts.resolved ?? 0 }}</div>
            <div class="text-sm text-gray-500 dark:text-gray-400"><i class="fas fa-check-circle mr-1"></i> Resolved</div>
        </a>
    </div>

    <!-- Filters -->
    <div class="card-modern p-4 mb-6 animate-fade-in-up stagger-2">
        <form method="get" action="{{ path('admin_report_index') }}" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Search</label>
                <input type="text" name="search" value="{{ currentSearch }}" placeholder="Search in messages or questions..."
                       class="w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white">
            </div>
            <div>
                <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Status</label>
                <select name="status" class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white">
                    <option value="">All</option>
                    {% for label, value in reportStatuses %}<option value="{{ value }}" {{ currentStatus == value ? 'selected' : '' }}>{{ label }}</option>{% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Type</label>
                <select name="type" class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-3 py-2 text-sm focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white">
                    <option value="">All</option>
                    {% for label, value in reportTypes %}<option value="{{ value }}" {{ currentType == value ? 'selected' : '' }}>{{ label }}</option>{% endfor %}
                </select>
            </div>
            <div>
                <button type="submit" class="btn-primary px-4 py-2 rounded-xl text-sm"><i class="fas fa-search mr-1"></i> Filter</button>
                <a href="{{ path('admin_report_index') }}" class="ml-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 text-sm transition"><i class="fas fa-times mr-1"></i> Clear</a>
            </div>
        </form>
    </div>

    {% if reports|length > 0 %}
    <form method="post" action="{{ path('admin_report_bulk_resolve') }}" id="bulk-form">
        <!-- Bulk Actions -->
        <div class="card-modern p-3 mb-4 flex items-center space-x-4 animate-fade-in-up stagger-3">
            <label class="flex items-center text-sm text-gray-600 dark:text-gray-400 cursor-pointer">
                <input type="checkbox" id="select-all" class="mr-2 rounded border-gray-300 dark:border-gray-600 text-primary-500 focus:ring-primary-500">
                Select all
            </label>
            <select name="bulk_action" class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-sm focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white">
                <option value="resolve">Mark as resolved</option>
                <option value="dismiss">Dismiss</option>
                <option value="review">Mark as reviewed</option>
            </select>
            <button type="submit" class="btn-ghost px-3 py-1.5 rounded-xl text-sm" onclick="return confirm('Apply this action to the selected reports? ?')">
                <i class="fas fa-check mr-1"></i> Apply
            </button>
        </div>

        <!-- Table -->
        <div class="card-modern overflow-hidden animate-fade-in-up stagger-4">
            <table class="min-w-full divide-y divide-gray-100 dark:divide-gray-700/50">
                <thead class="bg-gray-50 dark:bg-gray-800/50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase w-10"></th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Question</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Type</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Message</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Status</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Date</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-700/50">
                    {% for report in reports %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/30 transition {{ report.status == 'pending' ? 'bg-amber-50/30 dark:bg-amber-900/5' : '' }}">
                        <td class="px-4 py-3"><input type="checkbox" name="report_ids[]" value="{{ report.id }}" class="report-checkbox rounded border-gray-300 dark:border-gray-600 text-primary-500 focus:ring-primary-500"></td>
                        <td class="px-4 py-3 text-sm text-gray-800 dark:text-gray-200 max-w-xs truncate" title="{{ report.question.text }}">{{ report.question.text|length > 60 ? report.question.text[:60] ~ '...' : report.question.text }}</td>
                        <td class="px-4 py-3"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-violet-100 dark:bg-violet-900/30 text-violet-700 dark:text-violet-400">{{ report.typeLabel }}</span></td>
                        <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400 max-w-xs truncate" title="{{ report.message }}">{{ report.message|length > 80 ? report.message[:80] ~ '...' : report.message }}</td>
                        <td class="px-4 py-3"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-{{ report.statusColor }}-100 dark:bg-{{ report.statusColor }}-900/30 text-{{ report.statusColor }}-700 dark:text-{{ report.statusColor }}-400">{{ report.statusLabel }}</span></td>
                        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">{{ report.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="px-4 py-3 whitespace-nowrap"><a href="{{ path('admin_report_show', {id: report.id}) }}" class="text-primary-500 hover:text-primary-400 text-sm font-medium transition"><i class="fas fa-eye mr-1"></i> View</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
    {% else %}
    <div class="card-modern p-12 text-center animate-fade-in-up stagger-3">
        <i class="fas fa-flag text-gray-300 dark:text-gray-600 text-5xl mb-4"></i>
        <h3 class="text-xl font-bold text-gray-700 dark:text-gray-300 mb-2">No reports</h3>
        <p class="text-gray-400 dark:text-gray-500">
            {% if currentStatus or currentType or currentSearch %}
                No reports match the filters. <a href="{{ path('admin_report_index') }}" class="text-primary-500 hover:underline">Clear les filtres</a>
            {% else %}No reports have been submitted.{% endif %}
        </p>
    </div>
    {% endif %}
</div>

{% block javascripts %}
<script>
document.getElementById('select-all')?.addEventListener('change', function() {
    document.querySelectorAll('.report-checkbox').forEach(cb => cb.checked = this.checked);
});
</script>
{% endblock %}
{% endblock %}
