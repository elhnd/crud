{% extends 'base.html.twig' %}

{% block title %}Reports Management - Admin{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">
                <i class="fas fa-flag text-red-500 mr-2"></i> Question Reports
            </h1>
            <p class="text-gray-500 mt-1">Review and resolve user-submitted reports on questions</p>
        </div>
        <a href="{{ path('admin_quiz_index') }}" class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition">
            <i class="fas fa-arrow-left mr-1"></i> Back to Admin
        </a>
    </div>

    <!-- Status Summary Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <a href="{{ path('admin_report_index') }}" 
           class="bg-white rounded-xl shadow p-4 hover:shadow-md transition {{ currentStatus is null ? 'ring-2 ring-indigo-500' : '' }}">
            <div class="text-2xl font-bold text-gray-800">{{ reports|length }}</div>
            <div class="text-sm text-gray-500"><i class="fas fa-list mr-1"></i> All Reports</div>
        </a>
        <a href="{{ path('admin_report_index', {status: 'pending'}) }}" 
           class="bg-white rounded-xl shadow p-4 hover:shadow-md transition {{ currentStatus == 'pending' ? 'ring-2 ring-yellow-500' : '' }}">
            <div class="text-2xl font-bold text-yellow-600">{{ statusCounts.pending ?? 0 }}</div>
            <div class="text-sm text-gray-500"><i class="fas fa-clock mr-1"></i> Pending</div>
        </a>
        <a href="{{ path('admin_report_index', {status: 'reviewed'}) }}" 
           class="bg-white rounded-xl shadow p-4 hover:shadow-md transition {{ currentStatus == 'reviewed' ? 'ring-2 ring-blue-500' : '' }}">
            <div class="text-2xl font-bold text-blue-600">{{ statusCounts.reviewed ?? 0 }}</div>
            <div class="text-sm text-gray-500"><i class="fas fa-eye mr-1"></i> Reviewed</div>
        </a>
        <a href="{{ path('admin_report_index', {status: 'resolved'}) }}" 
           class="bg-white rounded-xl shadow p-4 hover:shadow-md transition {{ currentStatus == 'resolved' ? 'ring-2 ring-green-500' : '' }}">
            <div class="text-2xl font-bold text-green-600">{{ statusCounts.resolved ?? 0 }}</div>
            <div class="text-sm text-gray-500"><i class="fas fa-check-circle mr-1"></i> Resolved</div>
        </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow p-4 mb-6">
        <form method="get" action="{{ path('admin_report_index') }}" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                <input type="text" name="search" value="{{ currentSearch }}" placeholder="Search in messages or questions..."
                       class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select name="status" class="border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                    <option value="">All Statuses</option>
                    {% for label, value in reportStatuses %}
                        <option value="{{ value }}" {{ currentStatus == value ? 'selected' : '' }}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                <select name="type" class="border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                    <option value="">All Types</option>
                    {% for label, value in reportTypes %}
                        <option value="{{ value }}" {{ currentType == value ? 'selected' : '' }}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700 transition">
                    <i class="fas fa-search mr-1"></i> Filter
                </button>
                <a href="{{ path('admin_report_index') }}" class="ml-2 text-gray-500 hover:text-gray-700 text-sm">
                    <i class="fas fa-times mr-1"></i> Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Bulk Actions -->
    {% if reports|length > 0 %}
    <form method="post" action="{{ path('admin_report_bulk_resolve') }}" id="bulk-form">
        <div class="bg-white rounded-xl shadow p-3 mb-4 flex items-center space-x-4">
            <label class="flex items-center text-sm text-gray-600">
                <input type="checkbox" id="select-all" class="mr-2 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                Select All
            </label>
            <select name="bulk_action" class="border-gray-300 rounded-lg text-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option value="resolve">Mark as Resolved</option>
                <option value="dismiss">Dismiss</option>
                <option value="review">Mark as Reviewed</option>
            </select>
            <button type="submit" class="bg-gray-600 text-white px-3 py-1.5 rounded-lg text-sm hover:bg-gray-700 transition"
                    onclick="return confirm('Apply this action to all selected reports?')">
                <i class="fas fa-check mr-1"></i> Apply
            </button>
        </div>

        <!-- Reports Table -->
        <div class="bg-white rounded-xl shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase w-10"></th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Question</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Message</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for report in reports %}
                    <tr class="hover:bg-gray-50 {{ report.status == 'pending' ? 'bg-yellow-50/50' : '' }}">
                        <td class="px-4 py-3">
                            <input type="checkbox" name="report_ids[]" value="{{ report.id }}" 
                                   class="report-checkbox rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-800 max-w-xs truncate" title="{{ report.question.text }}">
                            {{ report.question.text|length > 60 ? report.question.text[:60] ~ '...' : report.question.text }}
                        </td>
                        <td class="px-4 py-3">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                {{ report.typeLabel }}
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-600 max-w-xs truncate" title="{{ report.message }}">
                            {{ report.message|length > 80 ? report.message[:80] ~ '...' : report.message }}
                        </td>
                        <td class="px-4 py-3">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                bg-{{ report.statusColor }}-100 text-{{ report.statusColor }}-800">
                                {{ report.statusLabel }}
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-500 whitespace-nowrap">
                            {{ report.createdAt|date('M d, Y H:i') }}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap">
                            <a href="{{ path('admin_report_show', {id: report.id}) }}" 
                               class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                                <i class="fas fa-eye mr-1"></i> View
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </form>
    {% else %}
    <div class="bg-white rounded-xl shadow p-12 text-center">
        <i class="fas fa-flag text-gray-300 text-5xl mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-600 mb-2">No reports found</h3>
        <p class="text-gray-400">
            {% if currentStatus or currentType or currentSearch %}
                No reports match your current filters. 
                <a href="{{ path('admin_report_index') }}" class="text-indigo-600 hover:underline">Clear filters</a>
            {% else %}
                No reports have been submitted yet.
            {% endif %}
        </p>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
document.getElementById('select-all')?.addEventListener('change', function() {
    document.querySelectorAll('.report-checkbox').forEach(cb => cb.checked = this.checked);
});
</script>
{% endblock %}
