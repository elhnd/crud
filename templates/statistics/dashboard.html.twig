{% extends 'base.html.twig' %}

{% block title %}Dashboard - Quiz Trainer{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-8 gap-4 animate-fade-in-up">
        <div>
            <h1 class="text-2xl font-extrabold text-gray-800 flex items-center gap-2">
                <span class="w-10 h-10 bg-gradient-to-br from-primary-500 to-violet-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-primary-500/20">
                    <i class="fas fa-chart-bar text-sm"></i>
                </span>
                Dashboard
            </h1>
            <p class="text-gray-400 text-sm mt-1">Track your progress and identify areas for improvement</p>
        </div>
        <a href="{{ path('statistics_revision_strategy') }}" 
           class="bg-gradient-to-r from-primary-500 to-violet-500 text-white px-5 py-2.5 rounded-xl font-bold text-sm hover:shadow-lg hover:shadow-primary-500/25 hover:-translate-y-0.5 transition-all flex items-center gap-2">
            <i class="fas fa-graduation-cap"></i> Revision Strategy
        </a>
    </div>

    <!-- Overview Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="card-modern p-5 animate-fade-in-up stagger-1">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium mb-1">Total Sessions</p>
                    <p class="text-2xl font-black text-gray-800">{{ stats.overall.totalSessions }}</p>
                </div>
                <div class="w-10 h-10 bg-primary-50 rounded-xl flex items-center justify-center">
                    <i class="fas fa-clipboard-list text-primary-500"></i>
                </div>
            </div>
        </div>
        <div class="card-modern p-5 animate-fade-in-up stagger-2">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium mb-1">Questions Answered</p>
                    <p class="text-2xl font-black text-gray-800">{{ stats.overall.totalQuestions }}</p>
                </div>
                <div class="w-10 h-10 bg-emerald-50 rounded-xl flex items-center justify-center">
                    <i class="fas fa-question-circle text-emerald-500"></i>
                </div>
            </div>
        </div>
        <div class="card-modern p-5 animate-fade-in-up stagger-3">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium mb-1">Correct Answers</p>
                    <p class="text-2xl font-black text-emerald-600">{{ stats.overall.correctAnswers }}</p>
                </div>
                <div class="w-10 h-10 bg-emerald-50 rounded-xl flex items-center justify-center">
                    <i class="fas fa-check-circle text-emerald-500"></i>
                </div>
            </div>
        </div>
        <div class="card-modern p-5 animate-fade-in-up stagger-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium mb-1">Average Score</p>
                    <p class="text-2xl font-black {% if stats.overall.averageScore >= 80 %}text-emerald-600{% elseif stats.overall.averageScore >= 60 %}text-amber-500{% else %}text-red-500{% endif %}">
                        {{ stats.overall.averageScore|number_format(1) }}%
                    </p>
                </div>
                <div class="w-10 h-10 bg-violet-50 rounded-xl flex items-center justify-center">
                    <i class="fas fa-chart-line text-violet-500"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="card-modern p-6 animate-fade-in-up stagger-2">
            <h2 class="text-base font-bold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-chart-bar text-primary-500"></i> Success Rate by Category
            </h2>
            <div class="h-72"><canvas id="categoryChart"></canvas></div>
        </div>
        <div class="card-modern p-6 animate-fade-in-up stagger-3">
            <h2 class="text-base font-bold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-chart-line text-primary-500"></i> Progress Over Time
            </h2>
            <div class="h-72"><canvas id="progressChart"></canvas></div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="card-modern p-6 animate-fade-in-up stagger-4">
            <h2 class="text-base font-bold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-chart-pie text-primary-500"></i> Mistake Distribution
            </h2>
            <div class="h-72"><canvas id="mistakeChart"></canvas></div>
        </div>
        <div class="card-modern p-6 animate-fade-in-up stagger-5">
            <h2 class="text-base font-bold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-chart-bar text-primary-500"></i> Performance by Subcategory
            </h2>
            <div class="h-72"><canvas id="subcategoryChart"></canvas></div>
        </div>
    </div>

    <!-- Weak & Strong Areas -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="card-modern overflow-hidden animate-fade-in-up">
            <div class="bg-red-50/80 px-5 py-3 border-b border-red-100">
                <h2 class="text-base font-bold text-red-700 flex items-center gap-2">
                    <i class="fas fa-exclamation-triangle"></i> Needs Improvement
                </h2>
            </div>
            <div class="p-5">
                {% if stats.weakAreas|length > 0 %}
                <div class="space-y-3">
                    {% for area in stats.weakAreas|slice(0, 5) %}
                    <div class="flex items-center justify-between p-3 bg-red-50/50 rounded-xl">
                        <div class="flex items-center gap-2">
                            <span class="bg-red-100 text-red-600 px-2 py-0.5 rounded-lg text-xs font-bold">{{ area.type }}</span>
                            <span class="text-gray-700 text-sm font-medium">{{ area.name }}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-red-500 font-bold text-sm">{{ area.averageScore|number_format(1) }}%</span>
                            <span class="text-gray-300 text-xs">({{ area.totalAttempts }})</span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-6">
                    <div class="text-4xl mb-2">ðŸ˜Š</div>
                    <p class="text-gray-400 text-sm">No weaknesses identified!</p>
                </div>
                {% endif %}
                <a href="{{ path('statistics_weak_areas') }}" 
                   class="block mt-4 text-center text-red-500 hover:text-red-700 font-bold text-sm transition">
                    View all <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
        </div>

        <div class="card-modern overflow-hidden animate-fade-in-up">
            <div class="bg-emerald-50/80 px-5 py-3 border-b border-emerald-100">
                <h2 class="text-base font-bold text-emerald-700 flex items-center gap-2">
                    <i class="fas fa-trophy"></i> Strengths
                </h2>
            </div>
            <div class="p-5">
                {% if stats.strongAreas|length > 0 %}
                <div class="space-y-3">
                    {% for area in stats.strongAreas|slice(0, 5) %}
                    <div class="flex items-center justify-between p-3 bg-emerald-50/50 rounded-xl">
                        <div class="flex items-center gap-2">
                            <span class="bg-emerald-100 text-emerald-600 px-2 py-0.5 rounded-lg text-xs font-bold">{{ area.type }}</span>
                            <span class="text-gray-700 text-sm font-medium">{{ area.name }}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-emerald-600 font-bold text-sm">{{ area.averageScore|number_format(1) }}%</span>
                            <span class="text-gray-300 text-xs">({{ area.totalAttempts }})</span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-6">
                    <div class="text-4xl mb-2">ðŸŒ±</div>
                    <p class="text-gray-400 text-sm">Keep practicing to identify your strengths!</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Recent Sessions -->
    {% if stats.recentSessions|length > 0 %}
    <div class="card-modern overflow-hidden animate-fade-in-up">
        <div class="bg-gray-50/80 px-5 py-3 border-b border-gray-100">
            <h2 class="text-base font-bold text-gray-800 flex items-center gap-2">
                <i class="fas fa-history text-primary-500"></i> Recent Sessions
            </h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="px-5 py-3 text-left text-xs font-bold text-gray-400 uppercase">Session</th>
                        <th class="px-5 py-3 text-left text-xs font-bold text-gray-400 uppercase">Date</th>
                        <th class="px-5 py-3 text-left text-xs font-bold text-gray-400 uppercase">Questions</th>
                        <th class="px-5 py-3 text-left text-xs font-bold text-gray-400 uppercase">Score</th>
                        <th class="px-5 py-3 text-left text-xs font-bold text-gray-400 uppercase">Time</th>
                        <th class="px-5 py-3 text-left text-xs font-bold text-gray-400 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {% for session in stats.recentSessions %}
                    <tr class="hover:bg-gray-50/50 transition">
                        <td class="px-5 py-3 text-sm font-medium text-gray-700">{{ session.sessionLabel }}</td>
                        <td class="px-5 py-3 text-sm text-gray-400">{{ session.completedAt|date('d/m/Y H:i') }}</td>
                        <td class="px-5 py-3 text-sm">
                            <span class="text-emerald-600 font-bold">{{ session.correctAnswers }}</span>
                            <span class="text-gray-300">/</span>
                            <span class="text-gray-500">{{ session.totalQuestions }}</span>
                        </td>
                        <td class="px-5 py-3">
                            <span class="px-2.5 py-1 rounded-lg text-xs font-bold 
                                {% if session.score >= 80 %}bg-emerald-100 text-emerald-700
                                {% elseif session.score >= 60 %}bg-amber-100 text-amber-700
                                {% else %}bg-red-100 text-red-700{% endif %}">
                                {{ session.score|number_format(0) }}%
                            </span>
                        </td>
                        <td class="px-5 py-3 text-sm text-gray-400">{{ session.formattedTimeSpent }}</td>
                        <td class="px-5 py-3">
                            <a href="{{ path('quiz_review', {id: session.id}) }}" 
                               class="text-primary-500 hover:text-primary-700 font-bold text-sm transition">
                                Review
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', async function() {
    const chartFont = { family: 'Inter, sans-serif' };
    Chart.defaults.font.family = 'Inter, sans-serif';
    
    try {
        const categoryData = await fetch('{{ path("api_category_success_rate") }}').then(r => r.json());
        new Chart(document.getElementById('categoryChart'), {
            type: 'bar',
            data: { labels: categoryData.labels, datasets: [{ label: 'Success rate (%)', data: categoryData.data, backgroundColor: categoryData.colors, borderRadius: 10, barThickness: 40 }] },
            options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, max: 100, ticks: { callback: v => v + '%' }, grid: { color: '#f1f5f9' } }, x: { grid: { display: false } } }, plugins: { legend: { display: false } } }
        });
    } catch (e) {}

    try {
        const progressData = await fetch('{{ path("api_progress_over_time") }}').then(r => r.json());
        new Chart(document.getElementById('progressChart'), {
            type: 'line',
            data: { labels: progressData.labels, datasets: [{ label: 'Average score', data: progressData.data, borderColor: '#6366f1', backgroundColor: 'rgba(99, 102, 241, 0.08)', fill: true, tension: 0.4, pointRadius: 4, pointBackgroundColor: '#6366f1' }] },
            options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, max: 100, ticks: { callback: v => v + '%' }, grid: { color: '#f1f5f9' } }, x: { grid: { display: false } } } }
        });
    } catch (e) {}

    try {
        const mistakeData = await fetch('{{ path("api_mistake_distribution") }}').then(r => r.json());
        if (mistakeData.labels.length > 0) {
            new Chart(document.getElementById('mistakeChart'), {
                type: 'doughnut',
                data: { labels: mistakeData.labels, datasets: [{ data: mistakeData.data, backgroundColor: mistakeData.colors, borderWidth: 0, hoverOffset: 8 }] },
                options: { responsive: true, maintainAspectRatio: false, cutout: '65%', plugins: { legend: { position: 'right', labels: { padding: 15, usePointStyle: true, pointStyle: 'circle' } } } }
            });
        }
    } catch (e) {}

    try {
        const subcategoryData = await fetch('{{ path("api_subcategory_success_rate") }}').then(r => r.json());
        new Chart(document.getElementById('subcategoryChart'), {
            type: 'bar',
            data: { labels: subcategoryData.labels, datasets: [{ label: 'Success rate (%)', data: subcategoryData.data, backgroundColor: subcategoryData.colors, borderRadius: 10 }] },
            options: { responsive: true, maintainAspectRatio: false, indexAxis: 'y', scales: { x: { beginAtZero: true, max: 100, ticks: { callback: v => v + '%' }, grid: { color: '#f1f5f9' } }, y: { grid: { display: false } } }, plugins: { legend: { display: false } } }
        });
    } catch (e) {}
});
</script>
{% endblock %}
