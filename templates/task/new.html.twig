{% extends 'base.html.twig' %}

{% block title %}New task{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="card-modern overflow-hidden animate-fade-in-up">
        <div class="bg-gradient-to-r from-primary-500 to-violet-500 px-6 py-4">
            <h1 class="text-xl font-bold text-white flex items-center">
                <i class="fas fa-plus-circle mr-2"></i> New task
            </h1>
        </div>
        <div class="p-6">
            {# {{ form(form) }} #}
            {{ 'test '|trim(side : 'right') }}{{ 'test2 ' }}
            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_errors(form) }}
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        {{ form_row(form.task, {'attr': {'class': 'w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white'}}) }}
                    </div>
                    <div>
                        {{ form_row(form.dueDate, {'attr': {'class': 'w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl px-4 py-2.5 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent transition text-gray-900 dark:text-white'}}) }}
                    </div>
                </div>
                <div class="mt-6">
                    <button type="submit" class="btn-primary w-full py-2.5 rounded-xl text-sm">
                        <i class="fas fa-save mr-1"></i> Save
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
