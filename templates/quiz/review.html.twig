{% extends 'base.html.twig' %}

{% block title %}Review Quiz - Symfony & PHP Quiz Trainer{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">
                <i class="fas fa-eye text-indigo-600 mr-2"></i> Quiz Review
            </h1>
            <p class="text-gray-500">{{ session.sessionLabel }} - {{ session.completedAt|date('F d, Y') }}</p>
        </div>
        <div class="text-right">
            <div class="text-3xl font-bold 
                {% if session.score >= 80 %}text-green-600
                {% elseif session.score >= 60 %}text-yellow-600
                {% else %}text-red-600{% endif %}">
                {{ session.score|number_format(0) }}%
            </div>
            <div class="text-gray-500">{{ session.correctAnswers }}/{{ session.totalQuestions }} correct</div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="bg-white rounded-xl shadow p-4 mb-6 flex flex-wrap gap-2">
        {% for answer in answers %}
        <a href="#question-{{ loop.index }}" 
           class="w-10 h-10 flex items-center justify-center rounded-lg font-medium
                  {{ answer.isCorrect ? 'bg-green-100 text-green-700 hover:bg-green-200' : 'bg-red-100 text-red-700 hover:bg-red-200' }}
                  transition">
            {{ loop.index }}
        </a>
        {% endfor %}
    </div>

    <!-- Questions Review -->
    <div class="space-y-6">
        {% for answer in answers %}
        <div id="question-{{ loop.index }}" 
             class="bg-white rounded-2xl shadow-lg overflow-hidden scroll-mt-24">
            <!-- Question Header -->
            <div class="px-6 py-4 {{ answer.isCorrect ? 'bg-green-500' : 'bg-red-500' }} text-white">
                <div class="flex items-center justify-between">
                    <span class="font-semibold">
                        Question {{ loop.index }} of {{ answers|length }}
                    </span>
                    <span class="flex items-center">
                        {% if answer.isCorrect %}
                            <i class="fas fa-check-circle mr-2"></i> Correct
                        {% else %}
                            <i class="fas fa-times-circle mr-2"></i> Incorrect
                        {% endif %}
                    </span>
                </div>
            </div>

            <!-- Question Content -->
            <div class="p-6">
                <!-- Question Text -->
                <div class="mb-6">
                    <div class="flex items-start justify-between">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2 question-text flex-1">
                            {{ answer.question.text|format_code }}
                        </h3>
                        <div class="flex items-center space-x-2 ml-4">
                            <button type="button" onclick="toggleQuestionActive({{ answer.question.id }}, this)" 
                                    class="toggle-active-btn {{ answer.question.isActive ? 'text-green-600 hover:text-red-600' : 'text-red-600 hover:text-green-600' }} transition"
                                    title="{{ answer.question.isActive ? 'Click to deactivate this question' : 'Click to activate this question' }}">
                                <i class="fas {{ answer.question.isActive ? 'fa-eye' : 'fa-eye-slash' }} text-lg"></i>
                            </button>
                            <button type="button" onclick="openEditModal({{ answer.question.id }})" 
                                    class="text-gray-400 hover:text-indigo-600 transition"
                                    title="Edit question or answers">
                                <i class="fas fa-edit text-lg"></i>
                            </button>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3 text-sm text-gray-500">
                        <span class="bg-gray-100 px-2 py-1 rounded">
                            {{ answer.question.category.name }}
                        </span>
                        <span class="bg-gray-100 px-2 py-1 rounded">
                            {{ answer.question.subcategory.name }}
                        </span>
                        <span>
                            {% if answer.question.type == 'single_choice' %}
                                <i class="far fa-circle-dot mr-1"></i> Single Choice
                            {% elseif answer.question.type == 'multiple_choice' %}
                                <i class="far fa-square-check mr-1"></i> Multiple Choice
                            {% else %}
                                <i class="fas fa-toggle-on mr-1"></i> True/False
                            {% endif %}
                        </span>
                        <span class="toggle-status-text {{ answer.question.isActive ? 'text-green-600' : 'text-red-600' }}">
                            <i class="fas {{ answer.question.isActive ? 'fa-check-circle' : 'fa-times-circle' }} mr-1"></i>
                            {{ answer.question.isActive ? 'Active' : 'Inactive' }}
                        </span>
                    </div>
                </div>

                <!-- Answers -->
                <div class="space-y-3">
                    {% for questionAnswer in answer.question.answers %}
                    {% set wasSelected = questionAnswer.id in answer.selectedAnswerIds %}
                    <div class="flex items-center p-4 rounded-xl border-2
                        {% if questionAnswer.isCorrect and wasSelected %}
                            border-green-500 bg-green-50
                        {% elseif questionAnswer.isCorrect %}
                            border-green-500 bg-green-50
                        {% elseif wasSelected %}
                            border-red-500 bg-red-50
                        {% else %}
                            border-gray-200 bg-gray-50
                        {% endif %}">
                        
                        <div class="w-6 h-6 flex items-center justify-center mr-4">
                            {% if questionAnswer.isCorrect %}
                                <i class="fas fa-check text-green-600"></i>
                            {% elseif wasSelected %}
                                <i class="fas fa-times text-red-600"></i>
                            {% else %}
                                <i class="far fa-circle text-gray-400"></i>
                            {% endif %}
                        </div>
                        
                        <span class="flex-1 answer-text {{ questionAnswer.isCorrect ? 'text-green-800 font-medium' : 'text-gray-700' }}">
                            {{ questionAnswer.text|format_code }}
                        </span>
                        
                        {% if wasSelected %}
                        <span class="ml-2 text-sm px-2 py-1 rounded
                            {{ questionAnswer.isCorrect ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' }}">
                            Your answer
                        </span>
                        {% endif %}
                        
                        {% if questionAnswer.isCorrect %}
                        <span class="ml-2 text-sm px-2 py-1 rounded bg-green-200 text-green-800">
                            Correct answer
                        </span>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>

                <!-- Explanation -->
                {% if answer.question.explanation %}
                <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-xl">
                    <div class="flex items-start">
                        <i class="fas fa-lightbulb text-blue-500 text-xl mr-3 mt-1"></i>
                        <div>
                            <h4 class="font-semibold text-blue-800 mb-1">Explanation</h4>
                            <p class="text-blue-700">{{ answer.question.explanation|format_code }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Resource Links -->
                {% set urls = answer.question.resourceUrl|parse_urls %}
                {% if urls|length > 0 %}
                <div class="mt-4 p-4 bg-purple-50 border border-purple-200 rounded-xl">
                    <div class="flex items-start">
                        <i class="fas fa-book-open text-purple-500 text-xl mr-3 mt-1"></i>
                        <div class="flex-1">
                            <h4 class="font-semibold text-purple-800 mb-2">Learn More</h4>
                            <div class="space-y-2">
                                {% for url in urls %}
                                <div>
                                    <a href="{{ url }}" target="_blank" rel="noopener noreferrer"
                                       class="text-purple-700 hover:text-purple-900 underline break-all text-sm">
                                        <i class="fas fa-external-link-alt mr-1"></i>
                                        {{ url }}
                                    </a>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- AI Explanation Link -->
                <div class="mt-4 p-4 bg-gradient-to-r from-cyan-50 to-blue-50 border border-cyan-200 rounded-xl">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <i class="fas fa-robot text-cyan-600 text-xl mr-3"></i>
                            <div>
                                <h4 class="font-semibold text-cyan-800">AI-Powered Deep Explanation</h4>
                                <p class="text-cyan-600 text-sm">Get a detailed AI explanation with examples and best practices</p>
                            </div>
                        </div>
                        <a href="{{ path('statistics_question_detail', {id: answer.question.id, backUrl: app.request.uri}) }}" 
                           class="bg-gradient-to-r from-cyan-600 to-blue-600 text-white px-5 py-2.5 rounded-lg font-medium hover:from-cyan-700 hover:to-blue-700 transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5 flex items-center space-x-2">
                            <i class="fas fa-brain"></i>
                            <span>View AI Explanation</span>
                            <i class="fas fa-arrow-right text-sm"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Bottom Actions -->
    <div class="mt-8 flex justify-center space-x-4">
        <a href="{{ path('app_home') }}" 
           class="bg-gray-100 text-gray-700 px-6 py-3 rounded-xl font-semibold hover:bg-gray-200 transition">
            <i class="fas fa-home mr-2"></i> Home
        </a>
        <a href="{{ path('quiz_start_form') }}" 
           class="bg-indigo-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-indigo-700 transition">
            <i class="fas fa-redo mr-2"></i> New Quiz
        </a>
    </div>
</div>

<!-- Edit Modal -->
<div id="edit-modal" class="fixed inset-0 bg-black/50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-y-auto">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-4 flex justify-between items-center">
            <h3 class="text-xl font-bold text-white">
                <i class="fas fa-edit mr-2"></i> Edit Question & Answers
            </h3>
            <button onclick="closeEditModal()" class="text-white/80 hover:text-white">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <div class="p-6 space-y-6" id="edit-modal-content">
            <div class="text-center py-8">
                <i class="fas fa-spinner fa-spin text-4xl text-indigo-600"></i>
                <p class="mt-4 text-gray-500">Loading question...</p>
            </div>
        </div>
        
        <div class="bg-gray-50 px-6 py-4 flex justify-end space-x-3">
            <button onclick="closeEditModal()" 
                class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-300 transition">
                Close
            </button>
            <button onclick="location.reload()" 
                class="bg-indigo-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-indigo-700 transition">
                <i class="fas fa-sync mr-1"></i> Refresh Page
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
const editModal = document.getElementById('edit-modal');
const editModalContent = document.getElementById('edit-modal-content');
let currentQuestionId = null;

async function openEditModal(questionId) {
    currentQuestionId = questionId;
    editModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    // Load question data
    try {
        const response = await fetch(`/api/question/${questionId}`);
        const question = await response.json();
        
        let answersHtml = '';
        question.answers.forEach(answer => {
            answersHtml += `
                <div class="flex items-start space-x-3 p-3 border rounded-lg ${answer.isCorrect ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200'}">
                    <div class="flex-shrink-0 pt-2">
                        <input type="checkbox" id="correct-${answer.id}" ${answer.isCorrect ? 'checked' : ''}
                            class="w-5 h-5 text-green-600 border-gray-300 rounded focus:ring-green-500">
                    </div>
                    <div class="flex-1">
                        <textarea id="answer-${answer.id}" rows="2" 
                            class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm">${escapeHtml(answer.text)}</textarea>
                    </div>
                    <button onclick="saveAnswer(${answer.id})" 
                        class="flex-shrink-0 bg-gray-200 text-gray-700 px-3 py-2 rounded-lg text-sm hover:bg-gray-300 transition">
                        <i class="fas fa-save"></i>
                    </button>
                </div>
            `;
        });
        
        editModalContent.innerHTML = `
            <!-- Question Text -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-question-circle text-indigo-600 mr-1"></i> Question Text
                </label>
                <textarea id="edit-question-text" rows="4" 
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm">${escapeHtml(question.text)}</textarea>
                <button onclick="saveQuestion()" 
                    class="mt-2 bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700 transition">
                    <i class="fas fa-save mr-1"></i> Save Question
                </button>
            </div>
            
            <!-- Explanation -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-lightbulb text-yellow-500 mr-1"></i> Explanation (shown after answer)
                </label>
                <textarea id="edit-explanation-text" rows="2" 
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">${escapeHtml(question.explanation || '')}</textarea>
            </div>
            
            <!-- Resource URL -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-book-open text-purple-500 mr-1"></i> Learn More URLs (optional)
                    <span class="text-gray-400 font-normal ml-1">- separate multiple URLs with commas</span>
                </label>
                <textarea id="edit-resource-url" rows="2"
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm"
                    placeholder="https://symfony.com/doc/..., https://php.net/...">${escapeHtml(question.resourceUrl || '')}</textarea>
            </div>
            
            <!-- Answers -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-3">
                    <i class="fas fa-list text-indigo-600 mr-1"></i> Answers
                </label>
                <div class="space-y-3" id="edit-answers-container">
                    ${answersHtml}
                </div>
                <p class="text-xs text-gray-500 mt-2">
                    <i class="fas fa-info-circle mr-1"></i> Check the box to mark an answer as correct. Changes are saved individually.
                </p>
            </div>
        `;
    } catch (error) {
        editModalContent.innerHTML = `
            <div class="text-center py-8 text-red-600">
                <i class="fas fa-exclamation-triangle text-4xl"></i>
                <p class="mt-4">Failed to load question. Please try again.</p>
            </div>
        `;
    }
}

function closeEditModal() {
    editModal.classList.add('hidden');
    document.body.style.overflow = '';
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text || '';
    return div.innerHTML;
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && !editModal.classList.contains('hidden')) {
        closeEditModal();
    }
});

// Close modal on backdrop click
editModal.addEventListener('click', function(e) {
    if (e.target === editModal) {
        closeEditModal();
    }
});

async function saveQuestion() {
    const text = document.getElementById('edit-question-text').value;
    const explanation = document.getElementById('edit-explanation-text').value;
    const resourceUrl = document.getElementById('edit-resource-url').value;
    
    try {
        const response = await fetch(`/api/question/${currentQuestionId}/edit`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ text, explanation, resourceUrl })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showNotification('Question saved successfully!', 'success');
        } else {
            showNotification(data.error || 'Failed to save question', 'error');
        }
    } catch (error) {
        showNotification('Error saving question', 'error');
        console.error(error);
    }
}

async function saveAnswer(answerId) {
    const text = document.getElementById(`answer-${answerId}`).value;
    const isCorrect = document.getElementById(`correct-${answerId}`).checked;
    
    try {
        const response = await fetch(`/api/answer/${answerId}/edit`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ text, isCorrect })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showNotification('Answer saved successfully!', 'success');
        } else {
            showNotification(data.error || 'Failed to save answer', 'error');
        }
    } catch (error) {
        showNotification('Error saving answer', 'error');
        console.error(error);
    }
}

function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-[60] text-white font-medium ${type === 'success' ? 'bg-green-600' : 'bg-red-600'}`;
    notification.innerHTML = `<i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>${message}`;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 3000);
}

async function toggleQuestionActive(questionId, button) {
    try {
        const response = await fetch(`/api/question/${questionId}/toggle-active`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        
        const data = await response.json();
        
        if (data.success) {
            const icon = button.querySelector('i');
            
            if (data.isActive) {
                button.classList.remove('text-red-600', 'hover:text-green-600');
                button.classList.add('text-green-600', 'hover:text-red-600');
                button.title = 'Click to deactivate this question';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                button.classList.remove('text-green-600', 'hover:text-red-600');
                button.classList.add('text-red-600', 'hover:text-green-600');
                button.title = 'Click to activate this question';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
            
            // Update the status text in the same question block
            const questionBlock = button.closest('.bg-white');
            const statusText = questionBlock.querySelector('.toggle-status-text');
            if (statusText) {
                if (data.isActive) {
                    statusText.classList.remove('text-red-600');
                    statusText.classList.add('text-green-600');
                    statusText.innerHTML = '<i class="fas fa-check-circle mr-1"></i> Active';
                } else {
                    statusText.classList.remove('text-green-600');
                    statusText.classList.add('text-red-600');
                    statusText.innerHTML = '<i class="fas fa-times-circle mr-1"></i> Inactive';
                }
            }
            
            showNotification(data.message, 'success');
        } else {
            showNotification('Failed to toggle question status', 'error');
        }
    } catch (error) {
        showNotification('Error toggling question status', 'error');
        console.error(error);
    }
}
</script>
{% endblock %}
