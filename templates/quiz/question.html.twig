{% extends 'base.html.twig' %}

{% block title %}Question {{ questionNumber }} - Quiz{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Progress Bar -->
    <div class="bg-white rounded-xl shadow p-4 mb-6">
        <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-medium text-gray-600">
                Question {{ questionNumber }} of {{ session.totalQuestions }}
            </span>
            <span class="text-sm font-medium text-gray-600">
                {{ progress.percentage|number_format(0) }}% Complete
            </span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
            <div class="bg-indigo-600 h-3 rounded-full progress-bar" 
                 style="width: {{ progress.percentage }}%"></div>
        </div>
        <div class="flex justify-between mt-2 text-xs text-gray-500">
            <span>
                <i class="fas fa-check-circle text-green-500 mr-1"></i>
                {{ session.correctAnswers }} correct
            </span>
            <span>
                <i class="fas fa-times-circle text-red-500 mr-1"></i>
                {{ session.incorrectAnswers }} incorrect
            </span>
            <span>
                <i class="fas fa-clock text-gray-400 mr-1"></i>
                Total: <span id="quiz-timer">{{ quizElapsedTime }}</span>s
            </span>
            <span>
                <i class="fas fa-stopwatch text-indigo-400 mr-1"></i>
                Question: <span id="question-timer">{{ questionElapsedTime }}</span>s
            </span>
        </div>
    </div>

    <!-- Session Info -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-2">
            {% if session.mode == 'certification' %}
            <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-sm font-semibold">
                <i class="fas fa-certificate mr-1"></i> Certification Exam
            </span>
            {% endif %}
            {% if session.category %}
            <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm font-medium">
                {{ session.category.name }}
            </span>
            {% endif %}
            {% if session.subcategory %}
            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">
                {{ session.subcategory.name }}
            </span>
            {% endif %}
        </div>
        <form action="{{ path('quiz_abandon') }}" method="post" class="inline">
            <button type="submit" 
                    class="text-gray-400 hover:text-red-500 text-sm"
                    onclick="return confirm('Are you sure you want to abandon this quiz?')">
                <i class="fas fa-times mr-1"></i> Abandon
            </button>
        </form>
    </div>

    <!-- Question Card -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <!-- Question Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-4">
            <div class="flex items-center justify-between text-white">
                <span class="font-semibold">
                    {% if question.type == 'single_choice' %}
                        <i class="far fa-circle-dot mr-2"></i> Single Choice
                    {% elseif question.type == 'multiple_choice' %}
                        <i class="far fa-square-check mr-2"></i> Multiple Choice
                    {% else %}
                        <i class="fas fa-toggle-on mr-2"></i> True / False
                    {% endif %}
                </span>
                <div class="flex items-center space-x-3">
                    <button type="button" onclick="toggleQuestionActive({{ question.id }})" 
                            id="toggle-active-btn"
                            class="{{ question.isActive ? 'bg-green-500/80 hover:bg-red-500/80' : 'bg-red-500/80 hover:bg-green-500/80' }} px-3 py-1 rounded-full text-sm transition"
                            title="{{ question.isActive ? 'Click to deactivate this question' : 'Click to activate this question' }}">
                        <i class="fas {{ question.isActive ? 'fa-eye' : 'fa-eye-slash' }} mr-1" id="toggle-active-icon"></i>
                        <span id="toggle-active-text">{{ question.isActive ? 'Active' : 'Inactive' }}</span>
                    </button>
                    <button type="button" onclick="openReportModal()" 
                            class="bg-red-500/80 hover:bg-red-600/80 px-3 py-1 rounded-full text-sm transition"
                            title="Report an issue with this question">
                        <i class="fas fa-flag mr-1"></i> Report
                    </button>
                    <button type="button" onclick="openEditModal()" 
                            class="bg-white/20 hover:bg-white/30 px-3 py-1 rounded-full text-sm transition"
                            title="Edit question or answers">
                        <i class="fas fa-edit mr-1"></i> Edit
                    </button>
                    <span class="bg-white/20 px-3 py-1 rounded-full text-sm">
                        Difficulty: 
                        {% for i in 1..question.difficulty %}‚≠ê{% endfor %}
                    </span>
                </div>
            </div>
        </div>

        <!-- Question Body -->
        <form action="{{ path('quiz_submit') }}" method="post" id="quiz-form">
            <div class="p-6 md:p-8">
                <!-- Question Text -->
                <div class="mb-8 question-text">
                    <h2 class="text-xl md:text-2xl font-semibold text-gray-800 leading-relaxed">
                        {{ question.text|format_code }}
                    </h2>
                    {% if question.type == 'multiple_choice' %}
                    <p class="text-gray-500 text-sm mt-2">
                        <i class="fas fa-info-circle mr-1"></i> Select all correct answers
                    </p>
                    {% endif %}
                </div>

                <!-- Answers -->
                <div class="space-y-3">
                    {% for answer in answers %}
                    <label class="block cursor-pointer group">
                        <div class="flex items-center p-4 border-2 rounded-xl transition
                                    hover:border-indigo-400 hover:bg-indigo-50
                                    has-[:checked]:border-indigo-600 has-[:checked]:bg-indigo-50">
                            {% if question.type == 'multiple_choice' %}
                            <input type="checkbox" name="answers[]" value="{{ answer.id }}" 
                                   class="w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 mr-4">
                            {% else %}
                            <input type="radio" name="answers[]" value="{{ answer.id }}" 
                                   class="w-5 h-5 text-indigo-600 border-gray-300 focus:ring-indigo-500 mr-4">
                            {% endif %}
                            <span class="text-gray-700 group-hover:text-gray-900 answer-text">
                                {{ answer.text|format_code }}
                            </span>
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <!-- Submit Button -->
            <div class="bg-gray-50 px-6 py-4 flex justify-between items-center">
                <span class="text-gray-500 text-sm">
                    <i class="fas fa-lightbulb text-yellow-500 mr-1"></i>
                    Take your time to read the question carefully
                </span>
                <button type="submit" id="submit-btn"
                        class="bg-indigo-600 text-white px-8 py-3 rounded-xl font-semibold
                               hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 transition
                               disabled:opacity-50 disabled:cursor-not-allowed">
                    Submit Answer <i class="fas fa-arrow-right ml-2"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- Keyboard Shortcuts -->
    <div class="text-center mt-4 text-gray-400 text-sm">
        <i class="fas fa-keyboard mr-1"></i>
        Press <kbd class="bg-gray-200 px-2 py-1 rounded">1-4</kbd> to select, 
        <kbd class="bg-gray-200 px-2 py-1 rounded">Enter</kbd> to submit
    </div>
</div>

<!-- Report Modal -->
<div id="report-modal" class="fixed inset-0 bg-black/50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg">
        <div class="bg-gradient-to-r from-red-500 to-orange-500 px-6 py-4 flex justify-between items-center">
            <h3 class="text-xl font-bold text-white">
                <i class="fas fa-flag mr-2"></i> Report Question
            </h3>
            <button onclick="closeReportModal()" class="text-white/80 hover:text-white">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <div class="p-6 space-y-4">
            <p class="text-gray-600 text-sm">
                <i class="fas fa-info-circle text-blue-500 mr-1"></i>
                Found an issue with this question? Let us know so we can fix it.
            </p>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Issue Type</label>
                <select id="report-type" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-red-500 focus:border-red-500 text-sm">
                    <option value="">Select an issue type...</option>
                    <option value="wrong_answer">üî¥ Wrong Answer - The correct answer is marked incorrectly</option>
                    <option value="typo">‚úèÔ∏è Typo / Grammar - There's a spelling or grammar error</option>
                    <option value="unclear">‚ùì Unclear Question - The question is confusing or ambiguous</option>
                    <option value="duplicate">üìã Duplicate Question - This question appears more than once</option>
                    <option value="outdated">üìÖ Outdated Content - Information is no longer current</option>
                    <option value="other">üí¨ Other - Something else</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                <textarea id="report-message" rows="4" 
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-red-500 focus:border-red-500 text-sm"
                    placeholder="Please describe the issue in detail. For example: 'The answer marked as correct is actually wrong because...'"></textarea>
                <p class="text-xs text-gray-400 mt-1">Minimum 10 characters</p>
            </div>
            <div id="report-feedback" class="hidden rounded-lg p-3 text-sm"></div>
        </div>
        <div class="bg-gray-50 px-6 py-4 flex justify-end space-x-3">
            <button onclick="closeReportModal()" 
                class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-300 transition">
                Cancel
            </button>
            <button onclick="submitReport()" id="report-submit-btn"
                class="bg-red-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-red-700 transition">
                <i class="fas fa-paper-plane mr-1"></i> Submit Report
            </button>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div id="edit-modal" class="fixed inset-0 bg-black/50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-y-auto">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-4 flex justify-between items-center">
            <h3 class="text-xl font-bold text-white">
                <i class="fas fa-edit mr-2"></i> Edit Question & Answers
            </h3>
            <button onclick="closeEditModal()" class="text-white/80 hover:text-white">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <div class="p-6 space-y-6">
            <!-- Question Text -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-question-circle text-indigo-600 mr-1"></i> Question Text
                </label>
                <textarea id="edit-question-text" rows="4" 
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm">{{ question.text }}</textarea>
                <button onclick="saveQuestion()" 
                    class="mt-2 bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700 transition">
                    <i class="fas fa-save mr-1"></i> Save Question
                </button>
            </div>
            
            <!-- Explanation -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-lightbulb text-yellow-500 mr-1"></i> Explanation (shown after answer)
                </label>
                <textarea id="edit-explanation-text" rows="2" 
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">{{ question.explanation }}</textarea>
            </div>
            
            <!-- Resource URL -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-book-open text-purple-500 mr-1"></i> Learn More URLs (optional)
                    <span class="text-gray-400 font-normal ml-1">- separate multiple URLs with commas</span>
                </label>
                <textarea id="edit-resource-url" rows="2"
                    class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm"
                    placeholder="https://symfony.com/doc/..., https://php.net/...">{{ question.resourceUrl }}</textarea>
            </div>
            
            <!-- Answers -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-3">
                    <i class="fas fa-list text-indigo-600 mr-1"></i> Answers
                </label>
                <div class="space-y-3" id="edit-answers-container">
                    {% for answer in answers %}
                    <div class="flex items-start space-x-3 p-3 border rounded-lg {{ answer.isCorrect ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200' }}">
                        <div class="flex-shrink-0 pt-2">
                            <input type="checkbox" id="correct-{{ answer.id }}" {{ answer.isCorrect ? 'checked' : '' }}
                                class="w-5 h-5 text-green-600 border-gray-300 rounded focus:ring-green-500">
                        </div>
                        <div class="flex-1">
                            <textarea id="answer-{{ answer.id }}" rows="2" 
                                class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 font-mono text-sm">{{ answer.text }}</textarea>
                        </div>
                        <button onclick="saveAnswer({{ answer.id }})" 
                            class="flex-shrink-0 bg-gray-200 text-gray-700 px-3 py-2 rounded-lg text-sm hover:bg-gray-300 transition">
                            <i class="fas fa-save"></i>
                        </button>
                    </div>
                    {% endfor %}
                </div>
                <p class="text-xs text-gray-500 mt-2">
                    <i class="fas fa-info-circle mr-1"></i> Check the box to mark an answer as correct. Changes are saved individually.
                </p>
            </div>
        </div>
        
        <div class="bg-gray-50 px-6 py-4 flex justify-end space-x-3">
            <button onclick="closeEditModal()" 
                class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-300 transition">
                Close
            </button>
            <button onclick="location.reload()" 
                class="bg-indigo-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-indigo-700 transition">
                <i class="fas fa-sync mr-1"></i> Refresh Page
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('quiz-form');
    const submitBtn = document.getElementById('submit-btn');
    const answers = document.querySelectorAll('input[name="answers"], input[name="answers[]"]');
    
    // Timer elements
    const quizTimerEl = document.getElementById('quiz-timer');
    const questionTimerEl = document.getElementById('question-timer');
    
    // Initial times from server
    let quizElapsed = {{ quizElapsedTime }};
    let questionElapsed = {{ questionElapsedTime }};
    
    // Format time as mm:ss
    function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return mins > 0 ? `${mins}m ${secs}s` : `${secs}s`;
    }
    
    // Update timers every second
    setInterval(function() {
        quizElapsed++;
        questionElapsed++;
        quizTimerEl.textContent = formatTime(quizElapsed);
        questionTimerEl.textContent = formatTime(questionElapsed);
    }, 1000);

    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
        const key = parseInt(e.key);
        if (key >= 1 && key <= answers.length) {
            const answer = answers[key - 1];
            if (answer.type === 'radio') {
                answer.checked = true;
            } else {
                answer.checked = !answer.checked;
            }
        }
        
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            form.submit();
        }
    });

    // Prevent double submission
    form.addEventListener('submit', function() {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Submitting...';
    });
});

// Edit Modal Functions
const editModal = document.getElementById('edit-modal');
const questionId = {{ question.id }};

function openEditModal() {
    editModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeEditModal() {
    editModal.classList.add('hidden');
    document.body.style.overflow = '';
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && !editModal.classList.contains('hidden')) {
        closeEditModal();
    }
});

// Close modal on backdrop click
editModal.addEventListener('click', function(e) {
    if (e.target === editModal) {
        closeEditModal();
    }
});

async function saveQuestion() {
    const text = document.getElementById('edit-question-text').value;
    const explanation = document.getElementById('edit-explanation-text').value;
    const resourceUrl = document.getElementById('edit-resource-url').value;
    
    try {
        const response = await fetch(`/api/question/${questionId}/edit`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ text, explanation, resourceUrl })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showNotification('Question saved successfully!', 'success');
        } else {
            showNotification(data.error || 'Failed to save question', 'error');
        }
    } catch (error) {
        showNotification('Error saving question', 'error');
        console.error(error);
    }
}

async function saveAnswer(answerId) {
    const text = document.getElementById(`answer-${answerId}`).value;
    const isCorrect = document.getElementById(`correct-${answerId}`).checked;
    
    try {
        const response = await fetch(`/api/answer/${answerId}/edit`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ text, isCorrect })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showNotification('Answer saved successfully!', 'success');
        } else {
            showNotification(data.error || 'Failed to save answer', 'error');
        }
    } catch (error) {
        showNotification('Error saving answer', 'error');
        console.error(error);
    }
}

function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 text-white font-medium ${type === 'success' ? 'bg-green-600' : 'bg-red-600'}`;
    notification.innerHTML = `<i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>${message}`;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 3000);
}

// Report Modal Functions
const reportModal = document.getElementById('report-modal');

function openReportModal() {
    reportModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    // Reset form
    document.getElementById('report-type').value = '';
    document.getElementById('report-message').value = '';
    document.getElementById('report-feedback').classList.add('hidden');
    document.getElementById('report-submit-btn').disabled = false;
    document.getElementById('report-submit-btn').innerHTML = '<i class="fas fa-paper-plane mr-1"></i> Submit Report';
}

function closeReportModal() {
    reportModal.classList.add('hidden');
    document.body.style.overflow = '';
}

reportModal.addEventListener('click', function(e) {
    if (e.target === reportModal) closeReportModal();
});

async function submitReport() {
    const type = document.getElementById('report-type').value;
    const message = document.getElementById('report-message').value;
    const feedback = document.getElementById('report-feedback');
    const submitBtn = document.getElementById('report-submit-btn');

    if (!type) {
        feedback.className = 'rounded-lg p-3 text-sm bg-red-50 text-red-700 border border-red-200';
        feedback.innerHTML = '<i class="fas fa-exclamation-circle mr-1"></i> Please select an issue type.';
        feedback.classList.remove('hidden');
        return;
    }

    if (message.trim().length < 10) {
        feedback.className = 'rounded-lg p-3 text-sm bg-red-50 text-red-700 border border-red-200';
        feedback.innerHTML = '<i class="fas fa-exclamation-circle mr-1"></i> Please provide a more detailed description (at least 10 characters).';
        feedback.classList.remove('hidden');
        return;
    }

    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i> Submitting...';

    try {
        const response = await fetch(`/api/question/${questionId}/report`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ type, message })
        });

        const data = await response.json();

        if (data.success) {
            feedback.className = 'rounded-lg p-3 text-sm bg-green-50 text-green-700 border border-green-200';
            feedback.innerHTML = '<i class="fas fa-check-circle mr-1"></i> ' + data.message;
            feedback.classList.remove('hidden');
            showNotification('Report submitted successfully!', 'success');
            setTimeout(() => closeReportModal(), 2000);
        } else {
            feedback.className = 'rounded-lg p-3 text-sm bg-red-50 text-red-700 border border-red-200';
            feedback.innerHTML = '<i class="fas fa-exclamation-circle mr-1"></i> ' + (data.error || 'Failed to submit report');
            feedback.classList.remove('hidden');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-paper-plane mr-1"></i> Submit Report';
        }
    } catch (error) {
        feedback.className = 'rounded-lg p-3 text-sm bg-red-50 text-red-700 border border-red-200';
        feedback.innerHTML = '<i class="fas fa-exclamation-circle mr-1"></i> Error submitting report. Please try again.';
        feedback.classList.remove('hidden');
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="fas fa-paper-plane mr-1"></i> Submit Report';
    }
}

async function toggleQuestionActive(questionId) {
    try {
        const response = await fetch(`/api/question/${questionId}/toggle-active`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        
        const data = await response.json();
        
        if (data.success) {
            const btn = document.getElementById('toggle-active-btn');
            const icon = document.getElementById('toggle-active-icon');
            const text = document.getElementById('toggle-active-text');
            
            if (data.isActive) {
                btn.classList.remove('bg-red-500/80', 'hover:bg-green-500/80');
                btn.classList.add('bg-green-500/80', 'hover:bg-red-500/80');
                btn.title = 'Click to deactivate this question';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                text.textContent = 'Active';
            } else {
                btn.classList.remove('bg-green-500/80', 'hover:bg-red-500/80');
                btn.classList.add('bg-red-500/80', 'hover:bg-green-500/80');
                btn.title = 'Click to activate this question';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                text.textContent = 'Inactive';
            }
            
            showNotification(data.message, 'success');
        } else {
            showNotification('Failed to toggle question status', 'error');
        }
    } catch (error) {
        showNotification('Error toggling question status', 'error');
        console.error(error);
    }
}
</script>
{% endblock %}
