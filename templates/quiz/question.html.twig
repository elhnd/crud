{% extends 'base.html.twig' %}

{% block title %}Question {{ questionNumber }} - Quiz{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Progress Bar -->
    <div class="card-modern p-4 mb-5 animate-fade-in-down">
        <div class="flex items-center justify-between mb-2">
            <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">
                Question {{ questionNumber }} / {{ session.totalQuestions }}
            </span>
            <span class="text-xs font-bold text-primary-600 bg-primary-50 px-2.5 py-1 rounded-lg">
                {{ progress.percentage|number_format(0) }}%
            </span>
        </div>
        <div class="w-full bg-gray-100 rounded-full h-2.5 overflow-hidden">
            <div class="bg-gradient-to-r from-primary-500 to-accent-500 h-2.5 rounded-full progress-bar progress-shimmer" 
                 style="width: {{ progress.percentage }}%"></div>
        </div>
        <div class="flex justify-between mt-2.5 text-xs text-gray-400 font-medium">
            <span class="flex items-center gap-1">
                <span class="w-1.5 h-1.5 bg-emerald-400 rounded-full"></span>
                {{ session.correctAnswers }} correct
            </span>
            <span class="flex items-center gap-1">
                <span class="w-1.5 h-1.5 bg-red-400 rounded-full"></span>
                {{ session.incorrectAnswers }} incorrect
            </span>
            <span class="flex items-center gap-1">
                <i class="fas fa-clock text-gray-300"></i>
                Total: <span id="quiz-timer">{{ quizElapsedTime }}</span>s
            </span>
            <span class="flex items-center gap-1">
                <i class="fas fa-stopwatch text-primary-300"></i>
                Q: <span id="question-timer">{{ questionElapsedTime }}</span>s
            </span>
        </div>
    </div>

    <!-- Session Info -->
    <div class="flex items-center justify-between mb-5 animate-fade-in-up">
        <div class="flex items-center gap-2 flex-wrap">
            {% if session.mode == 'certification' %}
            <span class="inline-flex items-center gap-1 bg-amber-50 text-amber-700 px-3 py-1 rounded-lg text-xs font-bold">
                <i class="fas fa-certificate"></i> Certification Exam
            </span>
            {% endif %}
            {% if session.category %}
            <span class="bg-primary-50 text-primary-700 px-2.5 py-1 rounded-lg text-xs font-semibold">{{ session.category.name }}</span>
            {% endif %}
            {% if session.subcategory %}
            <span class="bg-violet-50 text-violet-700 px-2.5 py-1 rounded-lg text-xs font-semibold">{{ session.subcategory.name }}</span>
            {% endif %}
        </div>
        <form action="{{ path('quiz_abandon') }}" method="post" class="inline">
            <button type="submit" class="text-gray-300 hover:text-red-500 text-xs font-medium transition-colors flex items-center gap-1"
                    onclick="return confirm('Abandon this quiz?')">
                <i class="fas fa-times"></i> Abandon
            </button>
        </form>
    </div>

    <!-- Question Card -->
    <div class="card-modern overflow-hidden animate-scale-in">
        <!-- Question Header -->
        <div class="bg-gradient-to-r from-primary-600 via-violet-600 to-purple-600 px-6 py-3.5">
            <div class="flex items-center justify-between text-white">
                <span class="font-semibold text-sm flex items-center gap-2">
                    {% if question.type == 'single_choice' %}
                        <i class="far fa-circle-dot"></i> Single choice
                    {% elseif question.type == 'multiple_choice' %}
                        <i class="far fa-square-check"></i> Multiple choice
                    {% else %}
                        <i class="fas fa-toggle-on"></i> True / False
                    {% endif %}
                </span>
                <div class="flex items-center gap-2">
                    <button type="button" onclick="toggleQuestionActive({{ question.id }})" 
                            id="toggle-active-btn"
                            class="{{ question.isActive ? 'bg-emerald-500/30 hover:bg-red-500/30' : 'bg-red-500/30 hover:bg-emerald-500/30' }} px-2.5 py-1 rounded-lg text-xs transition-all"
                            title="{{ question.isActive ? 'Deactivate' : 'Activate' }}">
                        <i class="fas {{ question.isActive ? 'fa-eye' : 'fa-eye-slash' }}" id="toggle-active-icon"></i>
                        <span id="toggle-active-text">{{ question.isActive ? 'Active' : 'Inactive' }}</span>
                    </button>
                    <button type="button" onclick="openReportModal()" 
                            class="bg-white/10 hover:bg-red-500/30 px-2.5 py-1 rounded-lg text-xs transition-all">
                        <i class="fas fa-flag"></i>
                    </button>
                    <button type="button" onclick="openEditModal()" 
                            class="bg-white/10 hover:bg-white/20 px-2.5 py-1 rounded-lg text-xs transition-all">
                        <i class="fas fa-edit"></i>
                    </button>
                    <span class="bg-white/10 px-2.5 py-1 rounded-lg text-xs">
                        {% for i in 1..question.difficulty %}‚≠ê{% endfor %}
                    </span>
                </div>
            </div>
        </div>

        <!-- Question Body -->
        <form action="{{ path('quiz_submit') }}" method="post" id="quiz-form">
            <div class="p-6 md:p-8">
                <div class="mb-8 question-text">
                    <h2 class="text-lg md:text-xl font-bold text-gray-800 leading-relaxed">
                        {{ question.text|format_code }}
                    </h2>
                    {% if question.type == 'multiple_choice' %}
                    <p class="text-gray-400 text-xs mt-3 flex items-center gap-1.5 bg-gray-50 px-3 py-2 rounded-lg w-fit">
                        <i class="fas fa-info-circle text-primary-400"></i> Select all correct answers
                    </p>
                    {% endif %}
                </div>

                <div class="space-y-3">
                    {% for answer in answers %}
                    <label class="block cursor-pointer group">
                        <div class="flex items-start p-4 border-2 border-gray-100 rounded-xl transition-all duration-200
                                    hover:border-primary-300 hover:bg-primary-50/30
                                    has-[:checked]:border-primary-500 has-[:checked]:bg-primary-50 has-[:checked]:shadow-sm">
                            {% if question.type == 'multiple_choice' %}
                            <input type="checkbox" name="answers[]" value="{{ answer.id }}" 
                                   class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500/20 mr-4 mt-0.5">
                            {% else %}
                            <input type="radio" name="answers[]" value="{{ answer.id }}" 
                                   class="w-5 h-5 text-primary-600 border-gray-300 focus:ring-primary-500/20 mr-4 mt-0.5">
                            {% endif %}
                            <span class="text-gray-600 group-hover:text-gray-800 answer-text leading-relaxed text-sm">
                                {{ answer.text|format_code }}
                            </span>
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <!-- Submit -->
            <div class="bg-gray-50/80 px-6 py-4 flex justify-between items-center border-t border-gray-100">
                <span class="text-gray-400 text-xs flex items-center gap-1.5">
                    <i class="fas fa-lightbulb text-amber-400"></i>
                    Take time to read the question carefully
                </span>
                <button type="submit" id="submit-btn"
                        class="bg-gradient-to-r from-primary-500 to-primary-600 text-white px-7 py-3 rounded-xl font-bold text-sm
                               hover:from-primary-600 hover:to-primary-700 focus:ring-4 focus:ring-primary-500/20 transition-all duration-300
                               shadow-lg shadow-primary-500/20 hover:shadow-primary-500/35 hover:-translate-y-0.5
                               disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:translate-y-0
                               flex items-center gap-2">
                    Submit <i class="fas fa-arrow-right text-xs"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- Keyboard Shortcuts -->
    <div class="text-center mt-4 text-gray-300 text-xs flex items-center justify-center gap-2">
        <i class="fas fa-keyboard"></i>
        <kbd class="bg-gray-100 text-gray-500 px-1.5 py-0.5 rounded text-[10px] font-mono">1-4</kbd> select
        <kbd class="bg-gray-100 text-gray-500 px-1.5 py-0.5 rounded text-[10px] font-mono">Enter</kbd> submit
    </div>
</div>

<!-- Report Modal -->
<div id="report-modal" class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg animate-scale-in">
        <div class="bg-gradient-to-r from-red-500 to-orange-500 px-6 py-4 rounded-t-2xl flex justify-between items-center">
            <h3 class="text-lg font-bold text-white flex items-center gap-2">
                <i class="fas fa-flag"></i> Report an issue
            </h3>
            <button onclick="closeReportModal()" class="text-white/70 hover:text-white transition w-8 h-8 rounded-lg hover:bg-white/10 flex items-center justify-center">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Issue type</label>
                <select id="report-type" class="w-full border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-red-500/20 focus:border-red-500">
                    <option value="">Select...</option>
                    <option value="wrong_answer">üî¥ Wrong answer</option>
                    <option value="typo">‚úèÔ∏è Typo / Grammar</option>
                    <option value="unclear">‚ùì Unclear question</option>
                    <option value="duplicate">üìã Duplicate question</option>
                    <option value="outdated">üìÖ Outdated content</option>
                    <option value="other">üí¨ Other</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                <textarea id="report-message" rows="3" 
                    class="w-full border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-red-500/20 focus:border-red-500"
                    placeholder="Describe the issue..."></textarea>
            </div>
            <div id="report-feedback" class="hidden rounded-xl p-3 text-sm"></div>
        </div>
        <div class="bg-gray-50 px-6 py-4 rounded-b-2xl flex justify-end gap-2">
            <button onclick="closeReportModal()" class="px-4 py-2 rounded-xl text-sm font-medium text-gray-600 hover:bg-gray-100 transition">Cancel</button>
            <button onclick="submitReport()" id="report-submit-btn"
                class="bg-red-600 text-white px-5 py-2 rounded-xl text-sm font-semibold hover:bg-red-700 transition shadow-lg shadow-red-500/20">
                <i class="fas fa-paper-plane mr-1"></i> Send
            </button>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div id="edit-modal" class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-y-auto animate-scale-in">
        <div class="bg-gradient-to-r from-primary-600 to-violet-600 px-6 py-4 rounded-t-2xl flex justify-between items-center sticky top-0 z-10">
            <h3 class="text-lg font-bold text-white flex items-center gap-2">
                <i class="fas fa-edit"></i> Edit question
            </h3>
            <button onclick="closeEditModal()" class="text-white/70 hover:text-white transition w-8 h-8 rounded-lg hover:bg-white/10 flex items-center justify-center">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="p-6 space-y-5">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Question text</label>
                <textarea id="edit-question-text" rows="3" class="w-full border-gray-200 rounded-xl text-sm font-mono focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500">{{ question.text }}</textarea>
                <button onclick="saveQuestion()" class="mt-2 bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-700 transition">
                    <i class="fas fa-save mr-1"></i> Save
                </button>
            </div>
            
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Explanation</label>
                <textarea id="edit-explanation-text" rows="2" class="w-full border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500">{{ question.explanation }}</textarea>
            </div>
            
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Resource URLs</label>
                <textarea id="edit-resource-url" rows="2" class="w-full border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500" placeholder="https://...">{{ question.resourceUrl }}</textarea>
            </div>
            
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-3">Answers</label>
                <div class="space-y-2.5">
                    {% for answer in answers %}
                    <div class="flex items-start gap-3 p-3 border border-gray-100 rounded-xl {{ answer.isCorrect ? 'bg-emerald-50/50 border-emerald-200' : '' }}">
                        <div class="flex-shrink-0 pt-2">
                            <input type="checkbox" id="correct-{{ answer.id }}" {{ answer.isCorrect ? 'checked' : '' }}
                                class="w-5 h-5 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500/20">
                        </div>
                        <div class="flex-1">
                            <textarea id="answer-{{ answer.id }}" rows="2" class="w-full border-gray-200 rounded-lg text-sm font-mono focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500">{{ answer.text }}</textarea>
                        </div>
                        <button onclick="saveAnswer({{ answer.id }})" class="flex-shrink-0 bg-gray-100 text-gray-600 px-3 py-2 rounded-lg text-sm hover:bg-gray-200 transition">
                            <i class="fas fa-save"></i>
                        </button>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <div class="bg-gray-50 px-6 py-4 rounded-b-2xl flex justify-end gap-2 sticky bottom-0">
            <button onclick="closeEditModal()" class="px-4 py-2 rounded-xl text-sm font-medium text-gray-600 hover:bg-gray-100 transition">Close</button>
            <button onclick="location.reload()" class="bg-primary-600 text-white px-5 py-2 rounded-xl text-sm font-semibold hover:bg-primary-700 transition">
                <i class="fas fa-sync mr-1"></i> Refresh
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('quiz-form');
    const submitBtn = document.getElementById('submit-btn');
    const answers = document.querySelectorAll('input[name="answers"], input[name="answers[]"]');
    const quizTimerEl = document.getElementById('quiz-timer');
    const questionTimerEl = document.getElementById('question-timer');
    let quizElapsed = {{ quizElapsedTime }};
    let questionElapsed = {{ questionElapsedTime }};
    
    function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return mins > 0 ? `${mins}m ${secs}s` : `${secs}s`;
    }
    
    setInterval(function() {
        quizElapsed++;
        questionElapsed++;
        quizTimerEl.textContent = formatTime(quizElapsed);
        questionTimerEl.textContent = formatTime(questionElapsed);
    }, 1000);

    document.addEventListener('keydown', function(e) {
        const key = parseInt(e.key);
        if (key >= 1 && key <= answers.length) {
            const answer = answers[key - 1];
            answer.checked = answer.type === 'radio' ? true : !answer.checked;
        }
        if (e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); form.submit(); }
    });

    form.addEventListener('submit', function() {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Sending...';
    });
});

const editModal = document.getElementById('edit-modal');
const reportModal = document.getElementById('report-modal');
const questionId = {{ question.id }};

function openEditModal() { editModal.classList.remove('hidden'); document.body.style.overflow = 'hidden'; }
function closeEditModal() { editModal.classList.add('hidden'); document.body.style.overflow = ''; }
function openReportModal() { reportModal.classList.remove('hidden'); document.body.style.overflow = 'hidden'; document.getElementById('report-type').value = ''; document.getElementById('report-message').value = ''; document.getElementById('report-feedback').classList.add('hidden'); }
function closeReportModal() { reportModal.classList.add('hidden'); document.body.style.overflow = ''; }

document.addEventListener('keydown', function(e) { if (e.key === 'Escape') { closeEditModal(); closeReportModal(); } });
editModal.addEventListener('click', function(e) { if (e.target === editModal) closeEditModal(); });
reportModal.addEventListener('click', function(e) { if (e.target === reportModal) closeReportModal(); });

async function saveQuestion() {
    const text = document.getElementById('edit-question-text').value;
    const explanation = document.getElementById('edit-explanation-text').value;
    const resourceUrl = document.getElementById('edit-resource-url').value;
    try {
        const response = await fetch(`/api/question/${questionId}/edit`, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ text, explanation, resourceUrl }) });
        const data = await response.json();
        showNotification(data.success ? 'Question saved!' : (data.error || 'Error'), data.success ? 'success' : 'error');
    } catch (error) { showNotification('Save error', 'error'); }
}

async function saveAnswer(answerId) {
    const text = document.getElementById(`answer-${answerId}`).value;
    const isCorrect = document.getElementById(`correct-${answerId}`).checked;
    try {
        const response = await fetch(`/api/answer/${answerId}/edit`, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ text, isCorrect }) });
        const data = await response.json();
        showNotification(data.success ? 'Answer saved!' : (data.error || 'Error'), data.success ? 'success' : 'error');
    } catch (error) { showNotification('Save error', 'error'); }
}

async function submitReport() {
    const type = document.getElementById('report-type').value;
    const message = document.getElementById('report-message').value;
    const feedback = document.getElementById('report-feedback');
    const submitBtn = document.getElementById('report-submit-btn');
    if (!type) { feedback.className = 'rounded-xl p-3 text-sm bg-red-50 text-red-700'; feedback.innerHTML = '<i class="fas fa-exclamation-circle mr-1"></i> Select a type.'; feedback.classList.remove('hidden'); return; }
    if (message.trim().length < 10) { feedback.className = 'rounded-xl p-3 text-sm bg-red-50 text-red-700'; feedback.innerHTML = '<i class="fas fa-exclamation-circle mr-1"></i> Description too short (min 10 chars)'; feedback.classList.remove('hidden'); return; }
    submitBtn.disabled = true; submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i> Sending...';
    try {
        const response = await fetch(`/api/question/${questionId}/report`, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ type, message }) });
        const data = await response.json();
        if (data.success) { showNotification('Report sent!', 'success'); setTimeout(() => closeReportModal(), 1500); }
        else { feedback.className = 'rounded-xl p-3 text-sm bg-red-50 text-red-700'; feedback.innerHTML = data.error || 'Error'; feedback.classList.remove('hidden'); submitBtn.disabled = false; submitBtn.innerHTML = '<i class="fas fa-paper-plane mr-1"></i> Send'; }
    } catch (error) { submitBtn.disabled = false; submitBtn.innerHTML = '<i class="fas fa-paper-plane mr-1"></i> Send'; }
}

async function toggleQuestionActive(questionId) {
    try {
        const response = await fetch(`/api/question/${questionId}/toggle-active`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
        const data = await response.json();
        if (data.success) {
            const btn = document.getElementById('toggle-active-btn');
            const icon = document.getElementById('toggle-active-icon');
            const text = document.getElementById('toggle-active-text');
            if (data.isActive) { btn.className = 'bg-emerald-500/30 hover:bg-red-500/30 px-2.5 py-1 rounded-lg text-xs transition-all'; icon.className = 'fas fa-eye'; text.textContent = 'Active'; }
            else { btn.className = 'bg-red-500/30 hover:bg-emerald-500/30 px-2.5 py-1 rounded-lg text-xs transition-all'; icon.className = 'fas fa-eye-slash'; text.textContent = 'Inactive'; }
            showNotification(data.message, 'success');
        }
    } catch (error) { showNotification('Error', 'error'); }
}

function showNotification(message, type) {
    const n = document.createElement('div');
    n.className = `fixed top-4 right-4 px-5 py-3 rounded-xl shadow-2xl z-[100] text-white font-medium text-sm backdrop-blur-sm ${type === 'success' ? 'bg-emerald-600/95' : 'bg-red-600/95'}`;
    n.style.animation = 'fadeInUp 0.3s ease-out';
    n.innerHTML = `<i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>${message}`;
    document.body.appendChild(n);
    setTimeout(() => { n.style.opacity = '0'; n.style.transition = 'opacity 0.3s'; setTimeout(() => n.remove(), 300); }, 3000);
}
</script>
{% endblock %}
