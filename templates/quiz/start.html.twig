{% extends 'base.html.twig' %}

{% block title %}Start Quiz - Symfony & PHP Quiz Trainer{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <i class="fas fa-play-circle text-indigo-600 mr-2"></i> Configure Your Quiz
            </h1>
            <p class="text-gray-500">Customize your quiz settings or pick a quick option below</p>
        </div>

        <!-- Quick Start Options -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
            <a href="{{ path('quiz_certification_exam') }}" 
               class="bg-gradient-to-r from-amber-500 to-orange-600 text-white p-4 rounded-xl text-center hover:opacity-90 transition relative overflow-hidden">
                <div class="absolute top-0 right-0 bg-white/20 text-xs px-2 py-1 rounded-bl-lg">EXAM</div>
                <i class="fas fa-certificate text-2xl mb-2"></i>
                <div class="font-semibold">Certification</div>
                <div class="text-sm opacity-80">75 questions</div>
            </a>
            <a href="{{ path('quiz_quick_start', {type: 'random'}) }}" 
               class="bg-gradient-to-r from-purple-500 to-indigo-600 text-white p-4 rounded-xl text-center hover:opacity-90 transition">
                <i class="fas fa-random text-2xl mb-2"></i>
                <div class="font-semibold">Random Mix</div>
                <div class="text-sm opacity-80">10 questions</div>
            </a>
            <a href="{{ path('quiz_quick_start', {type: 'symfony'}) }}" 
               class="bg-gradient-to-r from-gray-800 to-gray-900 text-white p-4 rounded-xl text-center hover:opacity-90 transition">
                <i class="fab fa-symfony text-2xl mb-2"></i>
                <div class="font-semibold">Symfony Only</div>
                <div class="text-sm opacity-80">10 questions</div>
            </a>
            <a href="{{ path('quiz_quick_start', {type: 'php'}) }}" 
               class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white p-4 rounded-xl text-center hover:opacity-90 transition">
                <i class="fab fa-php text-2xl mb-2"></i>
                <div class="font-semibold">PHP Only</div>
                <div class="text-sm opacity-80">10 questions</div>
            </a>
        </div>

        <div class="relative">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
                <span class="px-4 bg-white text-gray-500">Or customize your quiz</span>
            </div>
        </div>

        <form action="{{ path('quiz_start') }}" method="post" class="mt-8 space-y-6">
            <!-- Number of Questions -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-list-ol text-indigo-600 mr-1"></i> Number of Questions
                </label>
                <div class="grid grid-cols-5 gap-2">
                    {% for num in [5, 10, 15, 20, 30] %}
                    <label class="relative">
                        <input type="radio" name="numberOfQuestions" value="{{ num }}" 
                               class="peer sr-only" {{ num == 10 ? 'checked' : '' }}>
                        <div class="cursor-pointer py-3 px-4 text-center border-2 rounded-lg
                                    peer-checked:border-indigo-600 peer-checked:bg-indigo-50 peer-checked:text-indigo-600
                                    hover:border-gray-300 transition">
                            {{ num }}
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <!-- Mode Selection -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-cog text-indigo-600 mr-1"></i> Quiz Mode
                </label>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <label class="relative">
                        <input type="radio" name="mode" value="random" class="peer sr-only" checked>
                        <div class="cursor-pointer p-4 border-2 rounded-lg text-center
                                    peer-checked:border-indigo-600 peer-checked:bg-indigo-50
                                    hover:border-gray-300 transition">
                            <i class="fas fa-random text-xl text-gray-400 peer-checked:text-indigo-600 mb-2"></i>
                            <div class="font-medium text-gray-700">Random</div>
                            <div class="text-xs text-gray-500">All categories</div>
                        </div>
                    </label>
                    <label class="relative">
                        <input type="radio" name="mode" value="category" class="peer sr-only" id="mode-category">
                        <div class="cursor-pointer p-4 border-2 rounded-lg text-center
                                    peer-checked:border-indigo-600 peer-checked:bg-indigo-50
                                    hover:border-gray-300 transition">
                            <i class="fas fa-folder text-xl text-gray-400 peer-checked:text-indigo-600 mb-2"></i>
                            <div class="font-medium text-gray-700">By Category</div>
                            <div class="text-xs text-gray-500">PHP or Symfony</div>
                        </div>
                    </label>
                    <label class="relative">
                        <input type="radio" name="mode" value="subcategory" class="peer sr-only" id="mode-subcategory">
                        <div class="cursor-pointer p-4 border-2 rounded-lg text-center
                                    peer-checked:border-indigo-600 peer-checked:bg-indigo-50
                                    hover:border-gray-300 transition">
                            <i class="fas fa-bullseye text-xl text-gray-400 peer-checked:text-indigo-600 mb-2"></i>
                            <div class="font-medium text-gray-700">Targeted</div>
                            <div class="text-xs text-gray-500">Specific topic</div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Category Selection -->
            <div id="category-select" class="hidden">
                <label class="block text-sm font-medium text-gray-700 mb-3">
                    <i class="fas fa-bookmark text-indigo-600 mr-1"></i> Select Categories
                </label>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    {% for category in categories %}
                    <label class="relative cursor-pointer">
                        <input type="checkbox" name="categories[]" value="{{ category.id }}" 
                               class="peer sr-only category-checkbox" data-category-id="{{ category.id }}">
                        <div class="p-4 border-2 rounded-lg transition
                                    peer-checked:border-indigo-600 peer-checked:bg-indigo-50
                                    hover:border-gray-300">
                            <div class="flex items-center">
                                <div class="w-5 h-5 border-2 rounded mr-3 flex items-center justify-center
                                            peer-checked:bg-indigo-600 peer-checked:border-indigo-600
                                            border-gray-300">
                                    <i class="fas fa-check text-white text-xs hidden peer-checked:block"></i>
                                </div>
                                <div>
                                    <div class="font-medium text-gray-700">{{ category.name }}</div>
                                    <div class="text-xs text-gray-500">{{ category.subcategories|length }} subcategories</div>
                                </div>
                            </div>
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <!-- Subcategory Selection (Multi-select with checkboxes) -->
            <div id="subcategory-select" class="hidden">
                <label class="block text-sm font-medium text-gray-700 mb-3">
                    <i class="fas fa-tag text-indigo-600 mr-1"></i> Select Subcategories
                    <span class="text-gray-400 font-normal">(select one or more)</span>
                </label>
                
                <!-- Search/Filter -->
                <div class="mb-4">
                    <input type="text" id="subcategory-search" placeholder="Search subcategories..."
                           class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm">
                </div>
                
                <!-- Select All / Clear -->
                <div class="flex gap-2 mb-4">
                    <button type="button" onclick="selectAllSubcategories()" 
                            class="text-sm text-indigo-600 hover:text-indigo-800">
                        <i class="fas fa-check-double mr-1"></i> Select All
                    </button>
                    <span class="text-gray-300">|</span>
                    <button type="button" onclick="clearAllSubcategories()" 
                            class="text-sm text-gray-500 hover:text-gray-700">
                        <i class="fas fa-times mr-1"></i> Clear All
                    </button>
                    <span class="text-gray-300">|</span>
                    <span id="selected-count" class="text-sm text-gray-500">0 selected</span>
                </div>
                
                <!-- Subcategories grouped by category -->
                <div class="max-h-96 overflow-y-auto border rounded-lg divide-y" id="subcategory-container">
                    {% for category in categories %}
                    <div class="subcategory-group" data-category="{{ category.name|lower }}">
                        <div class="bg-gray-50 px-4 py-2 font-medium text-gray-700 sticky top-0">
                            <i class="fas fa-folder text-indigo-500 mr-2"></i>{{ category.name }}
                        </div>
                        <div class="p-2 grid grid-cols-1 md:grid-cols-2 gap-2">
                            {% for subcategory in category.subcategories %}
                            <label class="subcategory-item cursor-pointer" data-name="{{ subcategory.name|lower }}">
                                <input type="checkbox" name="subcategories[]" value="{{ subcategory.id }}" 
                                       class="peer sr-only subcategory-checkbox">
                                <div class="flex items-center p-2 rounded-lg transition
                                            peer-checked:bg-indigo-100 peer-checked:text-indigo-700
                                            hover:bg-gray-100">
                                    <div class="w-4 h-4 border-2 rounded mr-2 flex items-center justify-center flex-shrink-0
                                                peer-checked:bg-indigo-600 peer-checked:border-indigo-600
                                                border-gray-300">
                                        <i class="fas fa-check text-white text-xs"></i>
                                    </div>
                                    <span class="text-sm">{{ subcategory.name }}</span>
                                </div>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Submit -->
            <div class="pt-4">
                <button type="submit" 
                        class="w-full bg-indigo-600 text-white py-4 px-6 rounded-xl font-semibold text-lg
                               hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300 transition">
                    <i class="fas fa-play mr-2"></i> Start Quiz
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const modeRadios = document.querySelectorAll('input[name="mode"]');
    const categorySelect = document.getElementById('category-select');
    const subcategorySelect = document.getElementById('subcategory-select');
    const subcategorySearch = document.getElementById('subcategory-search');
    const subcategoryCheckboxes = document.querySelectorAll('.subcategory-checkbox');
    const selectedCountEl = document.getElementById('selected-count');

    function updateVisibility() {
        const selectedMode = document.querySelector('input[name="mode"]:checked').value;
        
        categorySelect.classList.toggle('hidden', selectedMode === 'random');
        subcategorySelect.classList.toggle('hidden', selectedMode !== 'subcategory');
    }

    function updateSelectedCount() {
        const count = document.querySelectorAll('.subcategory-checkbox:checked').length;
        selectedCountEl.textContent = count + ' selected';
    }

    modeRadios.forEach(radio => {
        radio.addEventListener('change', updateVisibility);
    });

    // Search/filter subcategories
    subcategorySearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        document.querySelectorAll('.subcategory-item').forEach(item => {
            const name = item.dataset.name;
            const matches = name.includes(searchTerm);
            item.classList.toggle('hidden', !matches);
        });
        
        // Hide empty groups
        document.querySelectorAll('.subcategory-group').forEach(group => {
            const visibleItems = group.querySelectorAll('.subcategory-item:not(.hidden)');
            group.classList.toggle('hidden', visibleItems.length === 0);
        });
    });

    // Update count when checkboxes change
    subcategoryCheckboxes.forEach(cb => {
        cb.addEventListener('change', updateSelectedCount);
    });

    updateVisibility();
    updateSelectedCount();
});

function selectAllSubcategories() {
    document.querySelectorAll('.subcategory-item:not(.hidden) .subcategory-checkbox').forEach(cb => {
        cb.checked = true;
    });
    document.getElementById('selected-count').textContent = 
        document.querySelectorAll('.subcategory-checkbox:checked').length + ' selected';
}

function clearAllSubcategories() {
    document.querySelectorAll('.subcategory-checkbox').forEach(cb => {
        cb.checked = false;
    });
    document.getElementById('selected-count').textContent = '0 selected';
}
</script>
{% endblock %}
