{% extends 'base.html.twig' %}

{% block title %}Configure Quiz - Quiz Trainer{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="card-modern p-8 animate-fade-in-up">
        <div class="text-center mb-8">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center mx-auto mb-4 shadow-lg shadow-primary-500/20">
                <i class="fas fa-sliders-h text-white text-xl"></i>
            </div>
            <h1 class="text-2xl font-extrabold text-gray-800 mb-1">
                Configure Your Quiz
            </h1>
            <p class="text-gray-400 text-sm">Choose a quick mode or customize your settings</p>
        </div>

        <!-- Quick Start Options -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-8">
            <a href="{{ path('quiz_certification_exam') }}" 
               class="group relative bg-gradient-to-br from-amber-500 to-orange-500 text-white p-4 rounded-xl text-center hover:shadow-lg hover:shadow-amber-500/25 hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                <div class="absolute top-0 right-0 bg-white/20 text-[10px] px-2 py-0.5 rounded-bl-lg font-bold">EXAM</div>
                <i class="fas fa-certificate text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                <div class="font-bold text-sm">Certification</div>
                <div class="text-xs text-amber-100">75 questions</div>
            </a>
            <a href="{{ path('quiz_quick_start', {type: 'random'}) }}" 
               class="group bg-gradient-to-br from-violet-500 to-primary-600 text-white p-4 rounded-xl text-center hover:shadow-lg hover:shadow-primary-500/25 hover:-translate-y-1 transition-all duration-300">
                <i class="fas fa-shuffle text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                <div class="font-bold text-sm">Random</div>
                <div class="text-xs text-violet-200">10 questions</div>
            </a>
            <a href="{{ path('quiz_quick_start', {type: 'symfony'}) }}" 
               class="group bg-gradient-to-br from-slate-800 to-slate-900 text-white p-4 rounded-xl text-center hover:shadow-lg hover:shadow-slate-800/25 hover:-translate-y-1 transition-all duration-300">
                <i class="fab fa-symfony text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                <div class="font-bold text-sm">Symfony</div>
                <div class="text-xs text-slate-300">10 questions</div>
            </a>
            <a href="{{ path('quiz_quick_start', {type: 'php'}) }}" 
               class="group bg-gradient-to-br from-primary-500 to-purple-600 text-white p-4 rounded-xl text-center hover:shadow-lg hover:shadow-primary-500/25 hover:-translate-y-1 transition-all duration-300">
                <i class="fab fa-php text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                <div class="font-bold text-sm">PHP</div>
                <div class="text-xs text-purple-200">10 questions</div>
            </a>
        </div>

        <div class="relative my-8">
            <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-gray-100"></div></div>
            <div class="relative flex justify-center">
                <span class="px-4 bg-white text-gray-400 text-xs font-medium uppercase tracking-wider">Or customize</span>
            </div>
        </div>

        <form action="{{ path('quiz_start') }}" method="post" class="space-y-6">
            <!-- Number of Questions -->
            <div>
                <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-3">
                    <i class="fas fa-list-ol text-primary-500 text-xs"></i> Number of questions
                </label>
                <div class="grid grid-cols-5 gap-2">
                    {% for num in [5, 10, 15, 20, 30] %}
                    <label class="relative cursor-pointer">
                        <input type="radio" name="numberOfQuestions" value="{{ num }}" 
                               class="peer sr-only" {{ num == 10 ? 'checked' : '' }}>
                        <div class="py-3 text-center border-2 border-gray-100 rounded-xl text-sm font-semibold text-gray-500
                                    peer-checked:border-primary-500 peer-checked:bg-primary-50 peer-checked:text-primary-600
                                    hover:border-gray-200 transition-all duration-200 cursor-pointer">
                            {{ num }}
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <!-- Mode Selection -->
            <div>
                <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-3">
                    <i class="fas fa-cog text-primary-500 text-xs"></i> Quiz mode
                </label>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <label class="relative cursor-pointer">
                        <input type="radio" name="mode" value="random" class="peer sr-only" checked>
                        <div class="p-4 border-2 border-gray-100 rounded-xl text-center
                                    peer-checked:border-primary-500 peer-checked:bg-primary-50
                                    hover:border-gray-200 transition-all duration-200">
                            <div class="w-10 h-10 rounded-xl bg-gray-50 peer-checked:bg-primary-100 flex items-center justify-center mx-auto mb-2">
                                <i class="fas fa-shuffle text-gray-400 text-lg"></i>
                            </div>
                            <div class="font-semibold text-gray-700 text-sm">Random</div>
                            <div class="text-xs text-gray-400 mt-0.5">All categories</div>
                        </div>
                    </label>
                    <label class="relative cursor-pointer">
                        <input type="radio" name="mode" value="category" class="peer sr-only" id="mode-category">
                        <div class="p-4 border-2 border-gray-100 rounded-xl text-center
                                    peer-checked:border-primary-500 peer-checked:bg-primary-50
                                    hover:border-gray-200 transition-all duration-200">
                            <div class="w-10 h-10 rounded-xl bg-gray-50 flex items-center justify-center mx-auto mb-2">
                                <i class="fas fa-folder text-gray-400 text-lg"></i>
                            </div>
                            <div class="font-semibold text-gray-700 text-sm">By category</div>
                            <div class="text-xs text-gray-400 mt-0.5">PHP or Symfony</div>
                        </div>
                    </label>
                    <label class="relative cursor-pointer">
                        <input type="radio" name="mode" value="subcategory" class="peer sr-only" id="mode-subcategory">
                        <div class="p-4 border-2 border-gray-100 rounded-xl text-center
                                    peer-checked:border-primary-500 peer-checked:bg-primary-50
                                    hover:border-gray-200 transition-all duration-200">
                            <div class="w-10 h-10 rounded-xl bg-gray-50 flex items-center justify-center mx-auto mb-2">
                                <i class="fas fa-crosshairs text-gray-400 text-lg"></i>
                            </div>
                            <div class="font-semibold text-gray-700 text-sm">Targeted</div>
                            <div class="text-xs text-gray-400 mt-0.5">Specific topic</div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Category Selection -->
            <div id="category-select" class="hidden animate-fade-in-up">
                <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-3">
                    <i class="fas fa-bookmark text-primary-500 text-xs"></i> Select categories
                </label>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    {% for category in categories %}
                    <label class="relative cursor-pointer">
                        <input type="checkbox" name="categories[]" value="{{ category.id }}" 
                               class="peer sr-only category-checkbox" data-category-id="{{ category.id }}">
                        <div class="p-4 border-2 border-gray-100 rounded-xl transition-all duration-200
                                    peer-checked:border-primary-500 peer-checked:bg-primary-50
                                    hover:border-gray-200">
                            <div class="flex items-center gap-3">
                                <div class="w-5 h-5 border-2 rounded-md flex items-center justify-center
                                            peer-checked:bg-primary-500 peer-checked:border-primary-500 border-gray-300">
                                    <i class="fas fa-check text-white text-xs hidden peer-checked:block"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-700 text-sm">{{ category.name }}</div>
                                    <div class="text-xs text-gray-400">{{ category.subcategories|length }} subcategories</div>
                                </div>
                            </div>
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <!-- Subcategory Selection -->
            <div id="subcategory-select" class="hidden animate-fade-in-up">
                <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-3">
                    <i class="fas fa-tag text-primary-500 text-xs"></i> Select subcategories
                    <span class="text-gray-400 font-normal text-xs">(one or more)</span>
                </label>
                
                <div class="mb-3">
                    <div class="relative">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-300 text-sm"></i>
                        <input type="text" id="subcategory-search" placeholder="Search..."
                               class="w-full pl-9 pr-4 py-2.5 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-all">
                    </div>
                </div>
                
                <div class="flex items-center gap-3 mb-3 text-xs">
                    <button type="button" onclick="selectAllSubcategories()" class="text-primary-600 hover:text-primary-700 font-medium">
                        <i class="fas fa-check-double mr-1"></i> Select all
                    </button>
                    <span class="text-gray-200">|</span>
                    <button type="button" onclick="clearAllSubcategories()" class="text-gray-400 hover:text-gray-600 font-medium">
                        <i class="fas fa-times mr-1"></i> Clear all
                    </button>
                    <span class="text-gray-200">|</span>
                    <span id="selected-count" class="text-gray-400 font-medium">0 selected</span>
                </div>
                
                <div class="max-h-80 overflow-y-auto border border-gray-100 rounded-xl divide-y divide-gray-50" id="subcategory-container">
                    {% for category in categories %}
                    <div class="subcategory-group" data-category="{{ category.name|lower }}">
                        <div class="bg-gray-50/80 px-4 py-2.5 font-semibold text-gray-600 text-sm sticky top-0 backdrop-blur-sm flex items-center gap-2">
                            <i class="fas fa-folder text-primary-400 text-xs"></i>{{ category.name }}
                        </div>
                        <div class="p-2 grid grid-cols-1 md:grid-cols-2 gap-1.5">
                            {% for subcategory in category.subcategories %}
                            <label class="subcategory-item cursor-pointer" data-name="{{ subcategory.name|lower }}">
                                <input type="checkbox" name="subcategories[]" value="{{ subcategory.id }}" 
                                       class="peer sr-only subcategory-checkbox"
                                       {{ subcategory.id in preSelectedSubcategories|default([]) ? 'checked' : '' }}>
                                <div class="flex items-center gap-2 p-2.5 rounded-lg transition-all text-sm
                                            peer-checked:bg-primary-50 peer-checked:text-primary-700
                                            hover:bg-gray-50">
                                    <div class="w-4 h-4 border-2 rounded flex items-center justify-center flex-shrink-0
                                                peer-checked:bg-primary-500 peer-checked:border-primary-500 border-gray-300">
                                        <i class="fas fa-check text-white text-[8px]"></i>
                                    </div>
                                    <span class="text-gray-600 peer-checked:text-primary-700">{{ subcategory.name }}</span>
                                </div>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Submit -->
            <div class="pt-2">
                <button type="submit" 
                        class="w-full bg-gradient-to-r from-primary-500 to-primary-600 text-white py-4 px-6 rounded-xl font-bold text-base
                               hover:from-primary-600 hover:to-primary-700 focus:ring-4 focus:ring-primary-500/20 transition-all duration-300
                               shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 hover:-translate-y-0.5
                               flex items-center justify-center gap-2">
                    <i class="fas fa-rocket text-sm"></i> Start Quiz
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const modeRadios = document.querySelectorAll('input[name="mode"]');
    const categorySelect = document.getElementById('category-select');
    const subcategorySelect = document.getElementById('subcategory-select');
    const subcategorySearch = document.getElementById('subcategory-search');
    const subcategoryCheckboxes = document.querySelectorAll('.subcategory-checkbox');
    const selectedCountEl = document.getElementById('selected-count');

    const hasPreSelected = document.querySelectorAll('.subcategory-checkbox:checked').length > 0;
    if (hasPreSelected) {
        document.getElementById('mode-subcategory').checked = true;
    }

    function updateVisibility() {
        const selectedMode = document.querySelector('input[name="mode"]:checked').value;
        categorySelect.classList.toggle('hidden', selectedMode === 'random');
        subcategorySelect.classList.toggle('hidden', selectedMode !== 'subcategory');
    }

    function updateSelectedCount() {
        const count = document.querySelectorAll('.subcategory-checkbox:checked').length;
        selectedCountEl.textContent = count + ' selected';
    }

    modeRadios.forEach(radio => radio.addEventListener('change', updateVisibility));

    subcategorySearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        document.querySelectorAll('.subcategory-item').forEach(item => {
            item.classList.toggle('hidden', !item.dataset.name.includes(searchTerm));
        });
        document.querySelectorAll('.subcategory-group').forEach(group => {
            const visibleItems = group.querySelectorAll('.subcategory-item:not(.hidden)');
            group.classList.toggle('hidden', visibleItems.length === 0);
        });
    });

    subcategoryCheckboxes.forEach(cb => cb.addEventListener('change', updateSelectedCount));
    updateVisibility();
    updateSelectedCount();
});

function selectAllSubcategories() {
    document.querySelectorAll('.subcategory-item:not(.hidden) .subcategory-checkbox').forEach(cb => cb.checked = true);
    document.getElementById('selected-count').textContent = 
        document.querySelectorAll('.subcategory-checkbox:checked').length + ' selected';
}

function clearAllSubcategories() {
    document.querySelectorAll('.subcategory-checkbox').forEach(cb => cb.checked = false);
    document.getElementById('selected-count').textContent = '0 selected';
}
</script>
{% endblock %}
