{% extends 'base.html.twig' %}

{% block title %}Home - Symfony & PHP Quiz Trainer{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="gradient-bg rounded-2xl p-8 mb-8 text-white">
        <div class="flex flex-col md:flex-row items-center justify-between">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold mb-4">
                    ðŸŽ¯ Symfony & PHP Quiz Trainer
                </h1>
                <p class="text-lg opacity-90 mb-6">
                    Master Symfony and PHP concepts. Prepare for certification exams.
                    Track your progress and identify areas for improvement.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="{{ path('quiz_start_form') }}" 
                       class="bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
                        <i class="fas fa-play mr-2"></i> Start Custom Quiz
                    </a>
                    <a href="{{ path('quiz_quick_start', {type: 'random'}) }}" 
                       class="bg-indigo-800 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-900 transition">
                        <i class="fas fa-random mr-2"></i> Random Quiz (10 questions)
                    </a>
                </div>
            </div>
            <div class="hidden md:block text-8xl opacity-50">
                ðŸ“š
            </div>
        </div>
    </div>

    {% if inProgressSession %}
    <!-- Resume Quiz Banner -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 mb-8">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-clock text-yellow-500 text-2xl mr-4"></i>
                <div>
                    <h3 class="font-semibold text-yellow-800">Quiz in Progress</h3>
                    <p class="text-yellow-600 text-sm">
                        {{ inProgressSession.sessionLabel }} - 
                        Question {{ inProgressSession.currentQuestionIndex + 1 }} of {{ inProgressSession.totalQuestions }}
                    </p>
                </div>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('quiz_question') }}" 
                   class="bg-yellow-500 text-white px-4 py-2 rounded-lg font-semibold hover:bg-yellow-600 transition">
                    <i class="fas fa-play mr-1"></i> Continue
                </a>
                <form action="{{ path('quiz_abandon') }}" method="post" class="inline">
                    <button type="submit" 
                            class="bg-yellow-100 text-yellow-700 px-4 py-2 rounded-lg font-semibold hover:bg-yellow-200 transition"
                            onclick="return confirm('Are you sure you want to abandon this quiz?')">
                        <i class="fas fa-times mr-1"></i> Abandon
                    </button>
                </form>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow p-6 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Total Sessions</p>
                    <p class="text-3xl font-bold text-gray-800">{{ overallStats.totalSessions }}</p>
                </div>
                <div class="bg-indigo-100 p-3 rounded-lg">
                    <i class="fas fa-clipboard-list text-indigo-600 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-xl shadow p-6 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Questions Answered</p>
                    <p class="text-3xl font-bold text-gray-800">{{ overallStats.totalQuestions }}</p>
                </div>
                <div class="bg-green-100 p-3 rounded-lg">
                    <i class="fas fa-question-circle text-green-600 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-xl shadow p-6 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Correct Answers</p>
                    <p class="text-3xl font-bold text-gray-800">{{ overallStats.correctAnswers }}</p>
                </div>
                <div class="bg-emerald-100 p-3 rounded-lg">
                    <i class="fas fa-check-circle text-emerald-600 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-xl shadow p-6 card-hover">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Average Score</p>
                    <p class="text-3xl font-bold {% if overallStats.averageScore >= 80 %}text-green-600{% elseif overallStats.averageScore >= 60 %}text-yellow-600{% else %}text-red-600{% endif %}">
                        {{ overallStats.averageScore|number_format(1) }}%
                    </p>
                </div>
                <div class="bg-purple-100 p-3 rounded-lg">
                    <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-gradient-to-r from-gray-900 to-gray-700 rounded-xl p-6 text-white card-hover">
            <div class="flex items-center mb-4">
                <div class="bg-white/20 p-2 rounded-lg mr-4">
                    <i class="fab fa-symfony text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold">Symfony Quiz</h3>
            </div>
            <p class="text-gray-300 mb-4">
                Test your knowledge on Symfony framework: DI, Security, Forms, Doctrine, Events, and more.
            </p>
            <a href="{{ path('quiz_quick_start', {type: 'symfony'}) }}" 
               class="inline-block bg-white text-gray-900 px-4 py-2 rounded-lg font-semibold hover:bg-gray-100 transition">
                <i class="fas fa-play mr-2"></i> Start Symfony Quiz
            </a>
        </div>
        
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl p-6 text-white card-hover">
            <div class="flex items-center mb-4">
                <img src="https://www.php.net/images/logos/new-php-logo.svg" alt="PHP" class="h-10 mr-4">
                <h3 class="text-xl font-bold">PHP Quiz</h3>
            </div>
            <p class="text-purple-100 mb-4">
                Master PHP concepts: OOP, Interfaces, Traits, PHP 8+ features, Exceptions, and typing.
            </p>
            <a href="{{ path('quiz_quick_start', {type: 'php'}) }}" 
               class="inline-block bg-white text-purple-600 px-4 py-2 rounded-lg font-semibold hover:bg-gray-100 transition">
                <i class="fas fa-play mr-2"></i> Start PHP Quiz
            </a>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="mb-8">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">
                <i class="fas fa-folder-open text-indigo-600 mr-2"></i> Categories
            </h2>
            <a href="{{ path('category_list') }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        
        {% if categories|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for category in categories %}
            <div class="bg-white rounded-xl shadow p-6 card-hover">
                <div class="flex items-center mb-4">
                    <div class="bg-indigo-100 p-3 rounded-lg mr-4">
                        <i class="fas fa-{{ category.icon ?? 'book' }} text-indigo-600 text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-800">{{ category.name }}</h3>
                        <p class="text-sm text-gray-500">{{ category.subcategories|length }} subcategories</p>
                    </div>
                </div>
                
                {% if category.subcategories|length > 0 %}
                <div class="flex flex-wrap gap-2 mb-4">
                    {% for subcategory in category.subcategories|slice(0, 4) %}
                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">
                        {{ subcategory.name }}
                    </span>
                    {% endfor %}
                    {% if category.subcategories|length > 4 %}
                    <span class="text-gray-400 text-xs">+{{ category.subcategories|length - 4 }} more</span>
                    {% endif %}
                </div>
                {% endif %}
                
                <a href="{{ path('quiz_by_category', {id: category.id}) }}" 
                   class="inline-block w-full text-center bg-indigo-50 text-indigo-600 px-4 py-2 rounded-lg font-medium hover:bg-indigo-100 transition">
                    <i class="fas fa-play mr-1"></i> Practice
                </a>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="bg-white rounded-xl shadow p-8 text-center">
            <i class="fas fa-database text-gray-300 text-5xl mb-4"></i>
            <p class="text-gray-500">No categories available yet. Run fixtures to add sample data.</p>
        </div>
        {% endif %}
    </div>

    <!-- Recent Sessions -->
    {% if recentSessions|length > 0 %}
    <div>
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">
                <i class="fas fa-history text-indigo-600 mr-2"></i> Recent Sessions
            </h2>
            <a href="{{ path('statistics_dashboard') }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
                View Statistics <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        
        <div class="bg-white rounded-xl shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Session</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Questions</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for session in recentSessions %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ session.sessionLabel }}</div>
                            <div class="text-sm text-gray-500">{{ session.mode }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ session.completedAt|date('M d, Y H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm text-gray-900">{{ session.correctAnswers }}/{{ session.totalQuestions }}</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                {% if session.score >= 80 %}bg-green-100 text-green-800
                                {% elseif session.score >= 60 %}bg-yellow-100 text-yellow-800
                                {% else %}bg-red-100 text-red-800{% endif %}">
                                {{ session.score|number_format(0) }}%
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <a href="{{ path('quiz_review', {id: session.id}) }}" 
                               class="text-indigo-600 hover:text-indigo-900">
                                <i class="fas fa-eye mr-1"></i> Review
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
