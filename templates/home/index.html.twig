{% extends 'base.html.twig' %}

{% block title %}Home - Symfony & PHP Quiz Trainer{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="relative gradient-bg rounded-2xl p-8 md:p-10 mb-8 text-white overflow-hidden animate-fade-in-up">
        <!-- Decorative orbs -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/3 blur-2xl"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full translate-y-1/3 -translate-x-1/4 blur-2xl"></div>
        
        <div class="relative flex flex-col md:flex-row items-center justify-between gap-6">
            <div class="flex-1">
                <div class="inline-flex items-center gap-2 bg-white/15 backdrop-blur-sm px-3 py-1.5 rounded-full text-sm mb-4">
                    <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
                    Ready to learn
                </div>
                <h1 class="text-3xl md:text-4xl font-extrabold mb-3 tracking-tight">
                    Master Symfony & PHP
                </h1>
                <p class="text-lg text-white/80 mb-6 max-w-lg leading-relaxed">
                    Prepare for your certifications with interactive quizzes, track your progress and identify areas for improvement.
                </p>
                <div class="flex flex-wrap gap-3">
                    <a href="{{ path('quiz_start_form') }}" 
                       class="group bg-white text-primary-600 px-6 py-3 rounded-xl font-semibold hover:bg-gray-50 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 flex items-center gap-2">
                        <i class="fas fa-play text-xs group-hover:translate-x-0.5 transition-transform"></i> Configure a Quiz
                    </a>
                    <a href="{{ path('quiz_quick_start', {type: 'random'}) }}" 
                       class="bg-white/15 backdrop-blur-sm text-white px-6 py-3 rounded-xl font-semibold hover:bg-white/25 transition-all duration-300 border border-white/20 flex items-center gap-2">
                        <i class="fas fa-shuffle text-xs"></i> Random Quiz
                    </a>
                </div>
            </div>
            <div class="hidden md:flex items-center justify-center">
                <div class="relative">
                    <div class="text-8xl animate-float opacity-60">ðŸ“š</div>
                    <div class="absolute -top-2 -right-2 w-6 h-6 bg-emerald-400 rounded-full flex items-center justify-center text-xs font-bold text-emerald-900">âœ“</div>
                </div>
            </div>
        </div>
    </div>

    {% if inProgressSession %}
    <!-- Resume Quiz Banner -->
    <div class="bg-gradient-to-r from-amber-50 to-orange-50 border border-amber-200/60 rounded-2xl p-5 mb-8 animate-fade-in-up stagger-1">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-amber-100 flex items-center justify-center">
                    <i class="fas fa-clock text-amber-600 text-xl"></i>
                </div>
                <div>
                    <h3 class="font-bold text-amber-900">Quiz in Progress</h3>
                    <p class="text-amber-700 text-sm">
                        {{ inProgressSession.sessionLabel }} â€” 
                        Question {{ inProgressSession.currentQuestionIndex + 1 }} of {{ inProgressSession.totalQuestions }}
                    </p>
                </div>
            </div>
            <div class="flex gap-2">
                <a href="{{ path('quiz_question') }}" 
                   class="bg-amber-500 text-white px-5 py-2.5 rounded-xl font-semibold hover:bg-amber-600 transition-all shadow-lg shadow-amber-500/20 flex items-center gap-2">
                    <i class="fas fa-play text-xs"></i> Resume
                </a>
                <form action="{{ path('quiz_abandon') }}" method="post" class="inline">
                    <button type="submit" 
                            class="bg-amber-100 text-amber-700 px-4 py-2.5 rounded-xl font-medium hover:bg-amber-200 transition-all"
                            onclick="return confirm('Are you sure you want to abandon this quiz?')">
                        <i class="fas fa-times"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Stats Overview -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="card-modern relative overflow-hidden p-5 stat-bar animate-fade-in-up stagger-1">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium uppercase tracking-wider">Sessions</p>
                    <p class="text-2xl md:text-3xl font-extrabold text-gray-800 mt-1">{{ overallStats.totalSessions }}</p>
                </div>
                <div class="w-11 h-11 rounded-xl bg-primary-50 flex items-center justify-center">
                    <i class="fas fa-clipboard-list text-primary-500"></i>
                </div>
            </div>
        </div>
        
        <div class="card-modern relative overflow-hidden p-5 stat-bar animate-fade-in-up stagger-2">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium uppercase tracking-wider">Questions</p>
                    <p class="text-2xl md:text-3xl font-extrabold text-gray-800 mt-1">{{ overallStats.totalQuestions }}</p>
                </div>
                <div class="w-11 h-11 rounded-xl bg-cyan-50 flex items-center justify-center">
                    <i class="fas fa-question-circle text-cyan-500"></i>
                </div>
            </div>
        </div>
        
        <div class="card-modern relative overflow-hidden p-5 stat-bar animate-fade-in-up stagger-3">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium uppercase tracking-wider">Correct</p>
                    <p class="text-2xl md:text-3xl font-extrabold text-emerald-600 mt-1">{{ overallStats.correctAnswers }}</p>
                </div>
                <div class="w-11 h-11 rounded-xl bg-emerald-50 flex items-center justify-center">
                    <i class="fas fa-check-circle text-emerald-500"></i>
                </div>
            </div>
        </div>
        
        <div class="card-modern relative overflow-hidden p-5 stat-bar animate-fade-in-up stagger-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-xs font-medium uppercase tracking-wider">Average</p>
                    <p class="text-2xl md:text-3xl font-extrabold mt-1 {% if overallStats.averageScore >= 80 %}text-emerald-600{% elseif overallStats.averageScore >= 60 %}text-amber-500{% else %}text-red-500{% endif %}">
                        {{ overallStats.averageScore|number_format(1) }}%
                    </p>
                </div>
                <div class="w-11 h-11 rounded-xl bg-violet-50 flex items-center justify-center">
                    <i class="fas fa-chart-line text-violet-500"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 mb-8">
        <div class="group relative rounded-2xl overflow-hidden card-hover animate-fade-in-up stagger-2">
            <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-700"></div>
            <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/3 blur-xl"></div>
            <div class="relative p-6">
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-14 h-14 rounded-2xl bg-white/10 backdrop-blur flex items-center justify-center border border-white/10">
                        <i class="fab fa-symfony text-white text-3xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-white">Quiz Symfony</h3>
                        <p class="text-slate-400 text-sm">10 random questions</p>
                    </div>
                </div>
                <p class="text-slate-300 text-sm mb-5 leading-relaxed">
                    DI, Security, Forms, Doctrine, Events, Routing and much more.
                </p>
                <a href="{{ path('quiz_quick_start', {type: 'symfony'}) }}" 
                   class="inline-flex items-center gap-2 bg-white text-slate-900 px-5 py-2.5 rounded-xl font-semibold hover:bg-gray-100 transition-all text-sm group-hover:shadow-lg">
                    <i class="fas fa-play text-xs"></i> Start
                </a>
            </div>
        </div>
        
        <div class="group relative rounded-2xl overflow-hidden card-hover animate-fade-in-up stagger-3">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-600 via-violet-600 to-purple-600"></div>
            <div class="absolute bottom-0 left-0 w-32 h-32 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/3 blur-xl"></div>
            <div class="relative p-6">
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-14 h-14 rounded-2xl bg-white/10 backdrop-blur flex items-center justify-center border border-white/10">
                        <i class="fab fa-php text-white text-3xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-white">Quiz PHP</h3>
                        <p class="text-purple-200 text-sm">10 random questions</p>
                    </div>
                </div>
                <p class="text-purple-100 text-sm mb-5 leading-relaxed">
                    OOP, Interfaces, Traits, PHP 8+, Exceptions, Types and more.
                </p>
                <a href="{{ path('quiz_quick_start', {type: 'php'}) }}" 
                   class="inline-flex items-center gap-2 bg-white text-purple-700 px-5 py-2.5 rounded-xl font-semibold hover:bg-gray-100 transition-all text-sm group-hover:shadow-lg">
                    <i class="fas fa-play text-xs"></i> Start
                </a>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="mb-8 animate-fade-in-up stagger-4">
        <div class="flex items-center justify-between mb-5">
            <h2 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                <div class="w-8 h-8 rounded-lg bg-primary-50 flex items-center justify-center">
                    <i class="fas fa-folder-open text-primary-500 text-sm"></i>
                </div>
                Categories
            </h2>
            <a href="{{ path('category_list') }}" class="text-primary-600 hover:text-primary-700 font-medium text-sm flex items-center gap-1 hover:gap-2 transition-all">
                View all <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
        
        {% if categories|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for category in categories %}
            <div class="card-modern p-5 card-hover group">
                <div class="flex items-center gap-3 mb-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-50 to-accent-50 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-{{ category.icon ?? 'book' }} text-primary-500"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-800 text-sm">{{ category.name }}</h3>
                        <p class="text-xs text-gray-400">{{ category.subcategories|length }} subcategories</p>
                    </div>
                </div>
                
                {% if category.subcategories|length > 0 %}
                <div class="flex flex-wrap gap-1.5 mb-4">
                    {% for subcategory in category.subcategories|slice(0, 4) %}
                    <span class="bg-gray-50 text-gray-500 px-2.5 py-1 rounded-lg text-xs font-medium border border-gray-100">
                        {{ subcategory.name }}
                    </span>
                    {% endfor %}
                    {% if category.subcategories|length > 4 %}
                    <span class="text-gray-400 text-xs flex items-center">+{{ category.subcategories|length - 4 }}</span>
                    {% endif %}
                </div>
                {% endif %}
                
                <a href="{{ path('quiz_by_category', {id: category.id}) }}" 
                   class="flex items-center justify-center gap-2 w-full bg-primary-50/60 text-primary-600 px-4 py-2.5 rounded-xl font-semibold text-sm hover:bg-primary-100 transition-all">
                    <i class="fas fa-play text-xs"></i> Practice
                </a>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="card-modern p-10 text-center">
            <div class="w-16 h-16 rounded-2xl bg-gray-50 flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-database text-gray-300 text-2xl"></i>
            </div>
            <p class="text-gray-400">No categories available. Run fixtures to add data.</p>
        </div>
        {% endif %}
    </div>

    <!-- Recent Sessions -->
    {% if recentSessions|length > 0 %}
    <div class="animate-fade-in-up stagger-5">
        <div class="flex items-center justify-between mb-5">
            <h2 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                <div class="w-8 h-8 rounded-lg bg-accent-50 flex items-center justify-center">
                    <i class="fas fa-history text-accent-500 text-sm"></i>
                </div>
                Recent Sessions
            </h2>
            <a href="{{ path('statistics_dashboard') }}" class="text-primary-600 hover:text-primary-700 font-medium text-sm flex items-center gap-1 hover:gap-2 transition-all">
                Statistics <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
        
        <div class="card-modern overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead>
                        <tr class="border-b border-gray-100">
                            <th class="px-5 py-3.5 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Session</th>
                            <th class="px-5 py-3.5 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Date</th>
                            <th class="px-5 py-3.5 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Questions</th>
                            <th class="px-5 py-3.5 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Score</th>
                            <th class="px-5 py-3.5 text-left text-xs font-semibold text-gray-400 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        {% for session in recentSessions %}
                        <tr class="hover:bg-primary-50/30 transition-colors">
                            <td class="px-5 py-4">
                                <div class="text-sm font-semibold text-gray-800">{{ session.sessionLabel }}</div>
                                <div class="text-xs text-gray-400 mt-0.5">{{ session.mode }}</div>
                            </td>
                            <td class="px-5 py-4 text-sm text-gray-500">
                                {{ session.completedAt|date('d M Y, H:i') }}
                            </td>
                            <td class="px-5 py-4">
                                <span class="text-sm font-medium">
                                    <span class="text-emerald-600">{{ session.correctAnswers }}</span>
                                    <span class="text-gray-300">/</span>
                                    <span class="text-gray-600">{{ session.totalQuestions }}</span>
                                </span>
                            </td>
                            <td class="px-5 py-4">
                                <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-bold
                                    {% if session.score >= 80 %}bg-emerald-50 text-emerald-700
                                    {% elseif session.score >= 60 %}bg-amber-50 text-amber-700
                                    {% else %}bg-red-50 text-red-700{% endif %}">
                                    {{ session.score|number_format(0) }}%
                                </span>
                            </td>
                            <td class="px-5 py-4">
                                <a href="{{ path('quiz_review', {id: session.id}) }}" 
                                   class="text-primary-600 hover:text-primary-700 text-sm font-medium flex items-center gap-1.5 w-fit">
                                    <i class="fas fa-eye text-xs"></i> Review
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
